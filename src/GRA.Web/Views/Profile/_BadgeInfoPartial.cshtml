@model GRA.Controllers.ViewModel.Profile.BadgeInfoViewModel

<div class="row row-spacing">
    <div class="col-xs-12 col-sm-3 text-center"
         style="margin-bottom: 1rem;">
        <img class="img-thumbnail img-responsive"
             alt="@Model.UserLog.BadgeAltText"
             src="~/@Model.UserLog.BadgeFilename"
             asp-append-version="true" />
    </div>
    <div class="col-xs-12 col-sm-9">
        @if (!string.IsNullOrWhiteSpace(Model.HtmlMessage))
        {
            <p>@Html.Raw(Model.HtmlMessage)</p>
        }
        else
        {
            <p>@Html.Raw(@Model.Message)</p>
        }
    </div>
</div>
<div class="row" style="margin-top: 1rem;">
    <div class="col-xs-12">
        @if (Model?.UserLog?.CreatedAt != null)
        {
            <p style="margin-bottom: 0;"><em>@SharedLocalizer[GRA.Annotations.Info.EarnedOn, Model.UserLog.CreatedAt.ToShortDateString()]</em></p>
        }
        else
        {
            <p style="margin-bottom: 0;">&nbsp;</p>
        }
    </div>
</div>