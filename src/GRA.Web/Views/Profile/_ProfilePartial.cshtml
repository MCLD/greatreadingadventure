<div class="row">
    <div class="col-xs-12">
        <ul class="nav nav-pills" style="padding: 10px 0;">
            <li ActiveBy routeKey="Action" value="Index"><a asp-action="Index">@SharedLocalizer[GRA.Annotations.Interface.Details]</a></li>
            <li ActiveBy routeKey="Action" value="Household">
                <a asp-action="Household">
                    @SharedLocalizer[Context.Items[GRA.Controllers.ItemKey.HouseholdTitle].ToString()]
                    @if (Model.HouseholdCount > 0)
                    {
                        <span class="label label-default label-as-badge">@(Model.HouseholdCount + 1)</span>
                    }
                </a>
            </li>
            <li ActiveBy routeKey="Action" value="Books"><a asp-action="Books">@SharedLocalizer[GRA.Annotations.Interface.BookList]</a></li>
            <li ActiveBy routeKey="Action" value="History"><a asp-action="History">@SharedLocalizer[GRA.Annotations.Interface.History]</a></li>
            <li ActiveBy routeKey="Action" value="Badges"><a asp-action="Badges">@SharedLocalizer[GRA.Annotations.Interface.Badges]</a></li>
            @if (Model.HasAccount)
            {
                <li ActiveBy routeKey="Action" value="ChangePassword"><a asp-action="ChangePassword">@SharedLocalizer[GRA.Annotations.Interface.ChangePassword]</a></li>
            }
        </ul>
    </div>
</div>
