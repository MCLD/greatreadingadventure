@model GRA.Controllers.ViewModel.Profile.HouseholdListViewModel

@if (Model.AuthUserIsHead)
{
    <div class="row">
        <div class="modal fade" id="dailyImageModal" style="text-align:center;" tabindex="-1" role="dialog" aria-labelledby="dailyImageModalLabel">
            <div class="modal-dialog" style="display: inline-block;" role="document">
                <div class="modal-content">
                    <span class="frame-close fa fa-stack fa-lg" style="position:absolute;" data-dismiss="modal">
                        <span class="fa fa-circle fa-stack-2x fa-inverse"></span>
                        <span class="fa fa-times-circle fa-stack-1x fa-lg" style="text-shadow:none;"></span>
                    </span>
                    <div style="padding: 25px;">
                        <img class="img img-responsive daily-image" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="modal fade pendingModal" tabindex="-1" role="dialog" aria-labelledby="pendingModalLabel">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <br />
                Activity cannot be logged for this participant until they log in and answer a questionnaire.
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="lead">My Profile</span>
            </div>
            <div class="panel-body">
                @Html.Partial("_ProfilePartial")

                @if (!string.IsNullOrEmpty(Model.GroupName))
                {
                    @if (Model.GroupLeader)
                    {
                        @:You are leader of the group: <a href="@Url.Action("GroupDetails")"><strong>@Model.GroupName</strong></a>
                    }
                    else
                    {
                        @:You are in the group: <strong>@Model.GroupName</strong>
                    }
                }

                <div class="row" style="padding: 10px 0;">
                    <div class="col-xs-12">
                        @if (Model.Users.Count() == 0)
                        {
                            if (Model.CanEditHousehold)
                            {
                                <div class="alert alert-warning">Click below to create a @Context.Items[GRA.Controllers.ItemKey.HouseholdTitle].ToString().ToLower()</div>
                                <a asp-action="AddHouseholdMember" class="btn btn-default">Add @Context.Items[GRA.Controllers.ItemKey.HouseholdTitle] Member</a>
                                <a asp-action="AddExistingParticipant" class="btn btn-default">Add Existing Participant</a>
                            }
                            else
                            {
                                <div class="alert alert-warning">A @Context.Items[GRA.Controllers.ItemKey.HouseholdTitle].ToString().ToLower() cannot be created at this time.</div>
                            }
                        }
                        else
                        {
                            <form id="form" asp-controller="Profile" method="post" role="form">
                                @if (Model.AuthUserIsHead && Model.CanLogActivity)
                                {
                                    <input asp-for="UserSelection" type="hidden" />
                                    <input asp-for="ActivityAmount" type="hidden" />
                                    <input asp-for="SecretCode" type="hidden" />

                                    <div class="row">
                                        <div class="col-xs-12 col-sm-6 row-spacing">
                                            <table>
                                                <tr>
                                                    @if (Model.PointTranslation.IsSingleEvent == false)
                                                    {
                                                        <td style="padding-right:6px;">@Model.PointTranslation.TranslationDescriptionPastTense.Replace("{0}", "").Trim()</td>
                                                        <td width="80px" style="padding-right:6px;">
                                                            <input data-action="HouseholdApplyActivity" value="" class="form-control activityInput" />
                                                        </td>
                                                    }
                                                    <td>
                                                        <button type="submit" class="btn btn-primary btn-spinner activityButton" data-action="HouseholdApplyActivity">
                                                            <span>
                                                                @if (Model.PointTranslation.IsSingleEvent)
                                                                {
                                                                    <span>
                                                                        @($"{Model.PointTranslation.TranslationDescriptionPastTense.Replace("{0}", "1")} {Model.PointTranslation.ActivityDescription}")
                                                                    </span>
                                                                }
                                                                else
                                                                {
                                                                    <span>
                                                                        @Model.PointTranslation.ActivityDescriptionPlural
                                                                    </span>
                                                                }
                                                            </span>
                                                            <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
                                                        </button>
                                                    </td>
                                                </tr>
                                                @if (!string.IsNullOrWhiteSpace(Model.ActivityMessage))
                                                {
                                                    <tr>
                                                        @if (Model.PointTranslation.IsSingleEvent == false)
                                                        {
                                                            <td>&nbsp;</td>
                                                        }
                                                        <td colspan="2">@Model.ActivityMessage</td>
                                                    </tr>
                                                }
                                            </table>
                                        </div>
                                        @if (!Model.DisableSecretCode)
                                        {
                                            <div class="col-xs-12 col-sm-6 row-spacing">
                                                <table>
                                                    <tr>
                                                        <td style="padding-right:6px;">Apply</td>
                                                        <td width="200px">
                                                            <input data-action="HouseholdApplySecretCode" class="form-control codeInput" />
                                                        </td>
                                                        <td style="padding-left:6px;">
                                                            <button type="submit" class="btn btn-primary btn-spinner codeButton" data-action="HouseholdApplySecretCode">
                                                                <span class="buttonText">Secret Code</span>
                                                                <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                    @if (!string.IsNullOrWhiteSpace(Model.SecretCodeMessage))
                                                    {
                                                        <tr>
                                                            <td>&nbsp;</td>
                                                            <td colspan="2">@Html.Raw(Model.SecretCodeMessage)</td>
                                                        </tr>
                                                    }
                                                </table>
                                            </div>
                                        }
                                    </div>
                                }
                                <div>
                                    <table class="table table-condensed table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                @if (Model.AuthUserIsHead)
                                                {
                                                    if (Model.CanLogActivity)
                                                    {
                                                        <th style="vertical-align:middle;" width="24px;"><input id="checkAll" type="checkbox" data-id="@Model.Head.Id" /></th>
                                                    }
                                                    <th width="36px"><span class="fa fa-envelope fa-lg"></span></th>
                                                }
                                                <th>User</th>
                                                <th>Points</th>
                                                @if (Model.ShowVendorCodes)
                                                {
                                                    <th>Book Code</th>
                                                }
                                            </tr>
                                            <tr class="warning @(Model.ActiveUser == Model.Head.Id ? "text-strong" : null)">
                                                @if (Model.AuthUserIsHead)
                                                {
                                                    if (Model.CanLogActivity)
                                                    {
                                                        <td style="vertical-align:middle;">
                                                            <input class="userSelection" data-id="@Model.Head.Id" type="checkbox" />
                                                        </td>
                                                    }
                                                    <td style="vertical-align:middle;">
                                                        <div class="user-mail" data-action="@(Model.ActiveUser == Model.Head.Id ? "" : @Url.Action("LoginAs", new { loginId = Model.Head.Id, goToMail = true }))">
                                                            @if (Model.Head.HasNewMail)
                                                            {
                                                                <span class="fa fa-envelope fa-lg"></span>
                                                                <span class="fa fa-exclamation fa-2x exclamation-alert"></span>
                                                            }
                                                            else
                                                            {
                                                                <span class="fa fa-envelope fa-lg" style="color:grey;"></span>
                                                            }
                                                        </div>
                                                    </td>
                                                }
                                                <td>
                                                    <table style="display: inline-block;">
                                                        <tr>
                                                            <td style="vertical-align: top;">
                                                                @if (Model.ActiveUser == Model.Head.Id)
                                                                {
                                                                    <span class="fa fa-user"></span>
                                                                }
                                                                @Model.Head.FullName
                                                            </td>
                                                            <td style="vertical-align: top;">
                                                                @if (Model.ActiveUser != Model.Head.Id && Model.AuthUserIsHead)
                                                                {
                                                                    <button type="submit"
                                                                            class="btn btn-primary btn-xs"
                                                                            style="margin-left: 6px;"
                                                                            name="loginId"
                                                                            value="@Model.Head.Id"
                                                                            asp-action="LoginAs">
                                                                        <span class="fa fa-sign-in"></span>
                                                                        Switch To
                                                                    </button>
                                                                }
                                                                else
                                                                {
                                                                    @:&nbsp;
                                                                }
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                @Model.Head.Username
                                                            </td>
                                                            <td>&nbsp;</td>
                                                        </tr>
                                                    </table>
                                                    @if (Model.AuthUserIsHead && Model.DailyImageDictionary.ContainsKey(Model.Head.ProgramId))
                                                    {
                                                        <button type="button"
                                                                class="btn btn-primary btn-xs viewDailyImage"
                                                                style="display: inline-block;vertical-align:top;"
                                                                data-src="@Url.Content($"~/{Model.DailyImageDictionary[Model.Head.ProgramId].DailyImagePath}")">
                                                            @Model.DailyImageDictionary[Model.Head.ProgramId].DailyImageMessage
                                                        </button>
                                                    }
                                                </td>
                                                <td>@Model.Head.PointsEarned</td>
                                                @if (Model.ShowVendorCodes)
                                                {
                                                    <td>
                                                        @if (Model.Head.NeedsToAnswerDonationQuestion)
                                                        {
                                                            <button class="btn btn-info btn-sm btn-spinner"
                                                                    name="redeemButton"
                                                                    value="@Model.Head.Id"
                                                                    asp-action="HandleHouseholdDonation">
                                                                <span class="buttonText">Redeem code</span>
                                                                <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
                                                            </button>
                                                            @:or
                                                            <button class="btn btn-success btn-sm btn-spinner"
                                                                    name="donateButton"
                                                                    value="@Model.Head.Id"
                                                                    asp-action="HandleHouseholdDonation">
                                                                <span class="buttonText">Donate book</span>
                                                                <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            if (!string.IsNullOrEmpty(Model.Head.VendorCodeUrl))
                                                            {
                                                                <strong><a href="@Model.Head.VendorCodeUrl" target="_blank">@Model.Head.VendorCode</a></strong>
                                                            }
                                                            else
                                                            {
                                                                <strong>@Model.Head.VendorCode</strong>
                                                            }
                                                            if (!string.IsNullOrEmpty(Model.Head.VendorCodeMessage))
                                                            {
                                                                <br />@Model.Head.VendorCodeMessage
                                                            }
                                                        }
                                                    </td>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var user in Model.Users)
                                            {
                                                <tr class="@(Model.ActiveUser == user.Id ? "info text-strong" : null)">
                                                    @if (Model.AuthUserIsHead)
                                                    {
                                                        if (Model.CanLogActivity)
                                                        {
                                                            <td style="vertical-align:middle;">
                                                                @if (!user.HasPendingQuestionnaire)
                                                                {
                                                                    <input class="userSelection" type="checkbox" data-id="@user.Id" />
                                                                }
                                                                else
                                                                {
                                                                    <span class="pendingQuestionnaire fa fa-exclamation-circle text-warning" style="cursor:pointer" data-toggle="modal" data-target=".pendingModal"></span>

                                                                }
                                                            </td>
                                                        }
                                                        <td style="vertical-align:middle;">
                                                            <div class="user-mail" data-action="@(Model.ActiveUser == user.Id ? "" : @Url.Action("LoginAs", new { loginId = user.Id, goToMail = true }))">
                                                                @if (user.HasNewMail)
                                                                {
                                                                    <span class="fa fa-envelope fa-lg"></span>
                                                                    <span class="fa fa-exclamation fa-2x exclamation-alert"></span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="fa fa-envelope fa-lg" style="color:grey;"></span>
                                                                }
                                                            </div>
                                                        </td>
                                                    }
                                                    <td>
                                                        <table style="display:inline-block;">
                                                            <tr>
                                                                <td style="vertical-align: top;">
                                                                    @if (Model.ActiveUser == user.Id)
                                                                    {
                                                                        <span class="fa fa-user"></span>
                                                                    }
                                                                    @user.FullName
                                                                </td>
                                                                <td style="vertical-align: top;">
                                                                    @if (Model.ActiveUser != user.Id && Model.AuthUserIsHead)
                                                                    {
                                                                        <button type="submit"
                                                                                class="btn btn-primary btn-xs top"
                                                                                style="margin: 0 6px;"
                                                                                name="loginId"
                                                                                value="@user.Id"
                                                                                asp-action="LoginAs">
                                                                            <span class="fa fa-sign-in"></span>
                                                                            Switch To
                                                                        </button>
                                                                    }
                                                                    else
                                                                    {
                                                                        @:&nbsp;
                                                                    }
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    @if (string.IsNullOrWhiteSpace(user.Username) && Model.AuthUserIsHead && Model.CanEditHousehold)
                                                                    {
                                                                        <button type="submit"
                                                                                class="btn btn-default btn-xs"
                                                                                name="RegisterId"
                                                                                asp-action="RegisterHouseholdMember"
                                                                                value="@user.Id">
                                                                            <span class="fa fa-user-plus"></span>
                                                                            Add Username
                                                                        </button>
                                                                    }
                                                                    else
                                                                    {
                                                                        @user.Username
                                                                    }
                                                                </td>
                                                                <td>&nbsp;</td>
                                                            </tr>
                                                        </table>
                                                        @if (Model.AuthUserIsHead && Model.DailyImageDictionary.ContainsKey(user.ProgramId))
                                                        {
                                                            <button type="button"
                                                                    class="btn btn-primary btn-xs viewDailyImage"
                                                                    style="display: inline-block;vertical-align:top;"
                                                                    data-src="@Url.Content($"~/{Model.DailyImageDictionary[user.ProgramId].DailyImagePath}")">
                                                                @Model.DailyImageDictionary[user.ProgramId].DailyImageMessage
                                                            </button>
                                                        }
                                                    </td>
                                                    <td>@user.PointsEarned</td>
                                                    @if (Model.ShowVendorCodes)
                                                    {
                                                        <td>
                                                            @if (user.NeedsToAnswerDonationQuestion)
                                                            {
                                                                <button class="btn btn-info btn-sm btn-spinner"
                                                                        name="redeemButton"
                                                                        value="@user.Id"
                                                                        asp-action="HandleHouseholdDonation">
                                                                    <span class="buttonText">Redeem code</span>
                                                                    <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
                                                                </button>
                                                                @:or
                                                                <button class="btn btn-success btn-sm btn-spinner"
                                                                        name="donateButton"
                                                                        value="@user.Id"
                                                                        asp-action="HandleHouseholdDonation">
                                                                    <span class="buttonText">Donate book</span>
                                                                    <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
                                                                </button>
                                                            }
                                                            else
                                                            {
                                                                if (!string.IsNullOrEmpty(user.VendorCodeUrl))
                                                                {
                                                                    <strong><a href="@user.VendorCodeUrl" target="_blank">@user.VendorCode</a></strong>
                                                                }
                                                                else
                                                                {
                                                                    <strong>@user.VendorCode</strong>
                                                                }
                                                                if (!string.IsNullOrEmpty(user.VendorCodeMessage))
                                                                {
                                                                    <br />@user.VendorCodeMessage
                                                                }
                                                            }
                                                        </td>
                                                    }
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (Model.AuthUserIsHead && Model.CanLogActivity)
                                {
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-6 row-spacing">
                                            <table>
                                                <tr>
                                                    @if (Model.PointTranslation.IsSingleEvent == false)
                                                    {
                                                        <td style="padding-right:6px;">@Model.PointTranslation.TranslationDescriptionPastTense.Replace("{0}", "").Trim()</td>
                                                        <td width="80px" style="padding-right:6px;">
                                                            <input data-action="HouseholdApplyActivity" value="" class="form-control activityInput" />
                                                        </td>
                                                    }
                                                    <td>
                                                        <button type="submit" class="btn btn-primary btn-spinner activityButton" data-action="HouseholdApplyActivity">
                                                            <span>
                                                                @if (Model.PointTranslation.IsSingleEvent)
                                                                {
                                                                    <span>
                                                                        @($"{Model.PointTranslation.TranslationDescriptionPastTense.Replace("{0}", "1")} {Model.PointTranslation.ActivityDescription}")
                                                                    </span>
                                                                }
                                                                else
                                                                {
                                                                    <span>
                                                                        @Model.PointTranslation.ActivityDescriptionPlural
                                                                    </span>
                                                                }
                                                            </span>
                                                            <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
                                                        </button>
                                                    </td>
                                                </tr>
                                                @if (!string.IsNullOrWhiteSpace(Model.ActivityMessage))
                                                {
                                                    <tr>
                                                        @if (Model.PointTranslation.IsSingleEvent == false)
                                                        {
                                                            <td>&nbsp;</td>
                                                        }
                                                        <td colspan="2">@Model.ActivityMessage</td>
                                                    </tr>
                                                }
                                            </table>

                                        </div>
                                        @if (!Model.DisableSecretCode)
                                        {
                                            <div class="col-xs-12 col-sm-6 row-spacing">
                                                <table>
                                                    <tr>
                                                        <td style="padding-right:6px;">Apply</td>
                                                        <td width="200px">
                                                            <input data-action="HouseholdApplySecretCode" class="form-control codeInput" />
                                                        </td>
                                                        <td style="padding-left:6px;">
                                                            <button type="submit" class="btn btn-primary btn-spinner codeButton" data-action="HouseholdApplySecretCode">
                                                                <span class="buttonText">Secret Code</span>
                                                                <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
                                                            </button>
                                                        </td>
                                                    </tr>
                                                    @if (!string.IsNullOrWhiteSpace(Model.SecretCodeMessage))
                                                    {
                                                        <tr>
                                                            <td>&nbsp;</td>
                                                            <td colspan="2">@Html.Raw(Model.SecretCodeMessage)</td>
                                                        </tr>
                                                    }
                                                </table>
                                            </div>
                                        }
                                    </div>

                                }
                            </form>
                            @if (Model.AuthUserIsHead && Model.CanEditHousehold)
                            {
                                <a asp-action="AddHouseholdMember" class="btn btn-default">Register new @Context.Items[GRA.Controllers.ItemKey.HouseholdTitle] Member</a>
                                <a asp-action="AddExistingParticipant" class="btn btn-default">Add existing participant to your @Context.Items[GRA.Controllers.ItemKey.HouseholdTitle]</a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
    {
    <script>
        var submitting = false;

        $(".user-mail").on("click", function () {
            var action = $(this).data("action");
            if (action == "") {
                window.open("@Url.Action("Index", "Mail")", "_blank");
            }
            else {
                $("#form").attr("action", action).submit();
            }
        });

        $("#checkAll").on("change", function (e) {
            if (e.originalEvent) {
                $(".userSelection").prop("checked", $(this).prop("checked"));
            }
        });

        $(".userSelection").on("change", function (e) {
            if (e.originalEvent) {
                if ($(".userSelection:not(:checked)").length) {
                    $("#checkAll").prop("checked", false);
                }
                else {
                    $("#checkAll").prop("checked", true);
                }
            }
        });

        $(".activityInput").on("keypress", function (e) {
            var keyCode = e.keyCode || e.which;
            if (keyCode === 13) {
                e.preventDefault();
                if (submitting != true) {
                    submitting = true;
                    $("#ActivityAmount").val($(this).val());
                    SetUserSelection();
                    $("#form").attr("action", $(this).data("action")).submit();
                }
            }
        });

        $(".codeInput").on("keypress", function (e) {
            var keyCode = e.keyCode || e.which;
            if (keyCode === 13) {
                e.preventDefault();
                if (submitting != true) {
                    submitting = true;
                    $("#SecretCode").val($(this).val());
                    SetUserSelection();
                    $("#form").attr("action", $(this).data("action")).submit();
                }
            }
        });

        $(".activityButton").on("click", function (e) {
            e.preventDefault();
            if (submitting != true) {
                submitting = true;
                $("#ActivityAmount").val($(this).parent().parent().find(".activityInput").val());
                SetUserSelection();
                $("#form").attr("action", $(this).data("action")).submit();
            }
        });

        $(".codeButton").on("click", function (e) {
            e.preventDefault();
            if (submitting != true) {
                submitting = true;
                $("#SecretCode").val($(this).parent().parent().find(".codeInput").val());
                SetUserSelection();
                $("#form").attr("action", $(this).data("action")).submit();
            }
        });

        function SetUserSelection() {
            var selectionArray = [];
            $(".userSelection:checked").each(function () {
                selectionArray.push($(this).data("id"));
            });
            $("#UserSelection").val(selectionArray);
        };

        $(".viewDailyImage").on("click", function () {
            var src = $(this).data("src");
            $(".daily-image").attr("src", src);
            $("#dailyImageModal").modal().show();
        });
    </script>
}
