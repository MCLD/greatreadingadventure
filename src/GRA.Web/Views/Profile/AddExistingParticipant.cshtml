@model GRA.Controllers.ViewModel.Profile.HouseholdExistingViewModel

<div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="lead">@SharedLocalizer[GRA.Annotations.Title.AddExistingParticipant]</span>
            </div>
            <div class="panel-body">

                <form asp-controller="Profile" asp-action="AddExistingParticipant" method="post" role="form">
                    <div class="row" style="padding: 10px 0;">
                        <div class="col-xs-12">

                            <div class="row row-spacing">
                                <div class="col-xs-12">
                                    <p>
                                        @SharedLocalizer[GRA.Annotations.Interface.AddExistingExplanation,
                                            SharedLocalizer[Context.Items[GRA.Controllers.ItemKey.HouseholdSentence].ToString()]]
                                    </p>
                                </div>
                            </div>

                            <div class="row row-spacing">
                                <div class="col-xs-12">
                                    <label asp-for="Username" class="control-label"></label>
                                    <input asp-for="Username" class="form-control" autofocus />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row row-spacing">
                                <div class="col-xs-12">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" type="password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <a asp-action="Household" class="btn btn-default">Return to @Context.Items[GRA.Controllers.ItemKey.HouseholdTitle]</a>
                        <button type="submit" id="Submit" name="Submit" value="Submit" class="btn btn-primary btn-spinner">
                            <span class="buttonText">@SharedLocalizer[GRA.Annotations.Interface.AddParticipant]</span>
                            <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>