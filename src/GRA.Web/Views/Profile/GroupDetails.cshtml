@model GRA.Domain.Model.GroupInfo
<div class="row">
    <div class="col-sm-6 offset-sm-3">
        <form asp-action="GroupDetails">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@SharedLocalizer[GRA.Annotations.Title.UpdateGroupDetails]</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Name" class="col-form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="GroupTypeName" class="col-form-label"></label>
                        <input asp-for="GroupTypeName" class="form-control" readonly disabled />
                    </div>
                </div>
                <div class="card-footer clearfix">
                    <div class="float-end">
                        <a class="btn btn-outline-danger" href="@Url.Action("Household")">@SharedLocalizer[GRA.Annotations.Interface.Cancel]</a>
                        <button type="submit" class="btn btn-outline-success">@SharedLocalizer[GRA.Annotations.Interface.Save]</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
