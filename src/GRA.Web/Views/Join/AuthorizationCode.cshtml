@model GRA.Controllers.ViewModel.Join.AuthorizationCodeViewModel

<form asp-action="AuthorizationCode" method="post">

    <div class="row">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="lead"><grasite property="name"></grasite> - Authorization</span>
                </div>
                <div class="panel-body">
                    <div class="form-group form-group-lg">
                        <label asp-for="AuthorizationCode" class="h4"></label>
                        <input asp-for="AuthorizationCode" class="form-control input-lg" type="password" autofocus required>
                        <span asp-validation-for="AuthorizationCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Validate code</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>