<form asp-controller="SignIn" asp-action="ForgotUsername" method="post" role="form">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="lead"><grasite property="name"></grasite> - @SharedLocalizer[GRA.Annotations.Title.UsernameRecovery]</span>
                </div>
                <div class="panel-body">
                    <div asp-validation-summary="All"></div>
                    <div class="row row-spacing">
                        <div class="col-xs-12">
                            <label class="control-label">@SharedLocalizer[GRA.DisplayNames.EmailAddress]</label>
                            <input name="email" class="form-control input-lg" autofocus />
                        </div>
                    </div>
                </div>
                <div class="panel-footer clearfix">
                    <div class="pull-left">
                        <a asp-action="Index" class="btn btn-default btn-lg">@SharedLocalizer[GRA.DisplayNames.ReturnToSignIn]</a>
                    </div>
                    <div class="pull-right">
                        <button class="btn btn-primary btn-lg">
                            @SharedLocalizer[GRA.DisplayNames.SendRecoveryEmail]
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>