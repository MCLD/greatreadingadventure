@model IEnumerable<SelectListItem>

@await Html.PartialAsync("_VendorCodePartial")

<form asp-controller="VendorCodes">
    <div class="row row-spacing">
        <div class="col-12">
            <div class="mb-3">
                <label for="vendorCodeTypeId">Vendor code:</label>
                <select id="vendorCodeTypeId" name="vendorCodeTypeId" asp-items="@Model" class="form-control"></select>
            </div>
        </div>
    </div>

    <div class="row row-spacing">
        <div class="col-12">
            <button asp-action="@nameof(VendorCodesController.DownloadUnreportedEmailAddresses)" formmethod="get" class="btn btn-outline-info">Download Unreported Email Addresses</button>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="mb-3">
                <label for="selectedFile">Update email award status:</label>
                <div class="input-group">
                    <label class="input-group-text">
                        <span class="btn btn-secondary btn-file">
                            <span class="far fa-file-image"></span>
                            Select an Excel file<input type="file" name="excelFile" accept=".xls" />
                        </span>
                    </label>
                    <input type="text" class="form-control" readonly id="selectedFile">
                    <span class="input-group-text">
                        <button type="submit"
                                asp-action="@nameof(VendorCodesController.EmailAwardStatus)"
                                formmethod="post"
                                formenctype="multipart/form-data"
                                class="btn btn-secondary"
                                data-bs-toggle="modal"
                                data-bs-target="#importModal">
                            <span class="fas fa-upload"></span>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="modal fade" tabindex="-1" role="dialog" id="importModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title h4">Uploading email award status file for import...</h1>
            </div>
            <div class="modal-body">
                <div class="progress">
                    <div class="progress-bar progress-bar-striped active"
                         role="progressbar"
                         aria-valuenow="100"
                         aria-valuemin="0"
                         aria-valuemax="100"
                         style="width: 100%">
                        <span class="sr-only">Importing Email Award Status Updates</span>
                    </div>
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@section scripts
{
    <script>
        $(':file').on('fileselect', function (event, numFiles, label) {
            var input = $(this).parents('.input-group').find(':text'),
                log = numFiles > 1 ? numFiles = ' files selected' : label;

            if (input.length) {
                input.val(log);
                $('.btn-file').removeClass('btn-outline-secondary');
                $('.btn-file').addClass('btn-outline-success');
            }
            else {
                input.val('');
                $('.btn-file').addClass('btn-outline-secondary');
                $('.btn-file').removeClass('btn-outline-success');
            }
        });

        $(document).on('change', ':file', function () {
            var input = $(this),
                numFiles = input.get(0).files ? input.get(0).files.length : 1,
                label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
            input.trigger('fileselect', [numFiles, label]);
        });
    </script>
}
