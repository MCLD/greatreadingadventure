@model GRA.Controllers.ViewModel.MissionControl.Systems.SystemListViewModel

<div class="row my-4">
    <div class="col-12 mb-2">
        <ul class="nav nav-pills flex-column flex-sm-row">
            <li class="nav-item">
                <a ActiveBy routeKey="Action"
                value="Index"
                asp-action="Index"
                class="nav-link">
            Systems</a>
            </li>
            <li class="nav-item">
                <a ActiveBy routeKey="Action"
                value="Branches"
                asp-action="Branches"
                class="nav-link">
            Branches</a>
            <li class="float-end nav-item">
                <div>
                    <a asp-action="Import" class="btn btn-sm btn-secondary nav-link">
                        <span class="fas fa-file-upload"></span>
                        Import
                    </a>
                    </div>
                     <li class="float-end nav-item">
                <div>
                    <div>
                    <a asp-action="Export" class="btn btn-sm btn-secondary nav-link">
                        <span class="fas fa-file-download"></span>
                        Export
                    </a>
                </div>
            </li>
        </ul>
    </div>
</div>

<form asp-controller="Systems" asp-action="Index" method="get" role="form">
    <div class="row row-spacing">
        <div class="col-8">
            <input asp-for="Search" class="form-control" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-secondary" style="margin-right: 8px;" />
            <a asp-action="Index" class="btn btn-secondary">Clear</a>
        </div>
    </div>
</form>

<div class="row" style="padding: 10px 0;">
    <div class="col-12">
        <a class="btn btn-secondary"
           data-bs-toggle="modal"
           data-bs-target="#addModal">Add a System</a>
    </div>
</div>

<div class="row" style="padding: 10px 0;">
    <div class="col-12">
        @if (Model.Systems.Count() == 0)
        {
            <div class="alert alert-warning">No Systems</div>
        }
        else
        {
            <div>
                <table class="table table-sm table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>System Name</th>
                            <th width="100">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var system in Model.Systems)
                        {
                            <tr>
                                <td>
                                    @system.Name
                                </td>
                                <td class="gra-mc-icon">
                                    <div class="btn-group-sm">
                                        <button type="button"
                                                class="btn btn-outline-primary btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#editModal"
                                                data-id="@system.Id"
                                                data-name="@system.Name">
                                            <span class="fas fa-pencil-alt fa-fw" aria-hidden="true"></span>
                                        </button>
                                        <button type="button"
                                                class="btn btn-outline-danger btn-sm"
                                                style="margin-left:16px;"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteModal"
                                                data-id="@system.Id"
                                                data-name="@system.Name">
                                            <span class="fas fa-times fa-fw" aria-hidden="true"></span>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.PaginateModel.MaxPage > 1)
            {
                <paginate paginateModel="@Model.PaginateModel"></paginate>
            }
        }
    </div>
</div>

<div class="row">
    <div class="modal fade"
         id="addModal"
         tabindex="-1"
         role="dialog"
         aria-labelledby="addModalLabel">
        <div class="modal-dialog" role="document">
            <form asp-controller="Systems"
                  asp-action="AddSystem"
                  method="post"
                  role="form"
                  style="display:inline">
                <input asp-for="Search" type="hidden" />
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title h4" id="addModalLabel">Add System</h1>
                        <button type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close dialog">
                            
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label asp-for="System.Name" class="col-form-label"></label>
                            <input asp-for="System.Name" class="form-control" />
                            <span asp-validation-for="System.Name" class="text-danger"></span>
                        </div>
                        <div class="modal-footer">
                            <button type="button"
                                    class="btn btn-secondary"
                                    data-bs-dismiss="modal"
                                    style="margin-left: 1em;">
                                Cancel
                            </button>
                            <button type="submit"
                                    class="btn btn-primary btn-spinner float-end"
                                    aria-label="Confirm"
                                    button-spinner>
                                Add
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="modal fade"
         id="editModal"
         tabindex="-1"
         role="dialog"
         aria-labelledby="editModalLabel">
        <div class="modal-dialog" role="document">
            <form asp-controller="Systems"
                  asp-action="EditSystem"
                  method="post"
                  role="form"
                  style="display:inline">
                <input asp-for="System.Id" type="hidden" />
                <input asp-for="Search" type="hidden" />
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title h4" id="editModalLabel">Edit System</h1>
                        <button type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close dialog">
                            
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label asp-for="System.Name" class="col-form-label"></label>
                            <input asp-for="System.Name" class="form-control" />
                            <span asp-validation-for="System.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button"
                                class="btn btn-secondary"
                                data-bs-dismiss="modal"
                                style="margin-right: 1em;">
                            Cancel
                        </button>
                        <button type="submit"
                                class="btn btn-primary btn-spinner float-end"
                                aria-label="Confirm"
                                button-spinner>
                            Save
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="modal fade"
         id="deleteModal"
         tabindex="-1"
         role="dialog"
         aria-labelledby="deleteModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title h4" id="deleteModalLabel">Delete system</h1>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close dialog">
                        
                    </button>
                </div>
                <div class="modal-body">
                    <span class="fas fa-exclamation-triangle fa-lg text-danger pt-2 me-3" aria-hidden="true"></span>
                    <span id="modal-text"></span>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal"
                            style="margin-right: 1em;">
                        Cancel
                    </button>
                    <form asp-controller="Systems"
                          asp-action="DeleteSystem"
                          method="post"
                          role="form"
                          style="display:inline">
                        <input asp-for="Search" type="hidden" />
                        <input id="Id" name="Id" type="hidden" />
                        <button type="submit"
                                class="btn btn-outline-danger btn-spinner float-end"
                                aria-label="Confirm"
                                button-spinner>
                            <span class="fas fa-times fa-fw" aria-hidden="true"></span>
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $('#editModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');
            var name = button.data('name');
            var modal = $(this);
            modal.find('#editModalLabel').text('Edit system - "' + name + '"');
            modal.find('#System_Id').val(id);
            modal.find('#System_Name').val(name);
        });

        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');
            var name = button.data('name');
            var modal = $(this);
            modal.find('#modal-text').text('Are you sure you wish to delete the system "' + name + '" ?');
            modal.find('#Id').val(id);
        });
    </script>
}