@model GRA.Controllers.ViewModel.MissionControl.News.CategoryDetailViewModel

<form asp-action="@Model.Action" method="post" role="form">
    <input asp-for="Action" type="hidden" />
    @if (Model.Action == nameof(NewsController.EditCategory))
    {
        <input asp-for="Category.Id" type="hidden" />
    }

    <div class="row">
        <div class="col-xs-12">
            <div class="mb-3">
                <badge asp-for="Category.Name" class="col-form-label"></badge>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <a asp-action="Categories" class="btn btn-secondary">Return to List</a>
                <button type="submit" class="btn btn-primary btn-spinner" button-spinner>
                    <span class="buttonText">Save Category</span>
                </button>
            </div>
        </div>
    </div>
</form>