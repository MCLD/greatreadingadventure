@model GRA.Domain.Model.Questionnaire

<form asp-controller="Questionnaires" asp-action="Create" method="post" role="form">
    <div class="row row-spacing">
        <div class="col-xs-12">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <a asp-action="Index" class="btn btn-default">Return to List</a>
        <button type="submit" class="btn btn-primary">
            <span class="buttonText">Create Questionnaire</span>
            <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
        </button>
    </div>
</form>