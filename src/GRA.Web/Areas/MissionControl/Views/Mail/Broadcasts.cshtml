@model GRA.Controllers.ViewModel.MissionControl.Mail.BroadcastListViewModel

@await Html.PartialAsync("_MailPartial")

<div class="row my-4">
    <div class="col-12 mb-2">
        <ul class="nav nav-pills flex-column flex-sm-row">
            <li class="nav-item">
                <a ActiveBy routeKey="Upcoming"
                value=",True"
                asp-action="Broadcasts"
                class="nav-link">
                Upcoming</a>
            </li>
            <li class="nav-item">
                <a ActiveBy routeKey="Upcoming"
                value="False"
                asp-action="Broadcasts" 
                asp-route-Upcoming="False"
                class="nav-link">
                Sent</a>
            </li>
        </ul>
    </div>
</div>

<div class="row my-4">
    <div class="col-12 mb-2">
        <a asp-action="BroadcastCreate" class="btn btn-outline-primary">Schedule a new Broadcast</a>
    </div>
</div>

<div class="row my-4">
    <div class="col-12">
        @if (Model.Broadcasts.Count() == 0)
        {
            <div class="alert alert-warning">No Broadcasts</div>
        }
        else
        {
            <div>
                <table class="table table-sm table-bordered link-table">
                    <thead>
                        <tr>
                            <th>@(Model.Upcoming ? "Send" : "Sent") at</th>
                            <th>Subject</th>
                            <th width="200px">Send to New Participants</th>
                            @if (Model.Upcoming)
                            {
                                <th>&nbsp;</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var broadcast in Model.Broadcasts)
                        {
                            <tr>
                                <td class="td-class">
                                    <a asp-action="BroadcastEdit" asp-route-id="@broadcast.Id" class="rowlink">
                                        @broadcast.SendAt
                                    </a>
                                </td>
                                <td>@broadcast.Subject</td>
                                <td class="gra-mc-icon">
                                    @if (broadcast.SendToNewUsers)
                                    {
                                        <span class="far fa-check-circle fa-lg text-success"></span>
                                    }
                                    else
                                    {
                                        <span class="fas fa-lg fa-ban text-danger"></span>
                                    }
                                </td>
                                @if (Model.Upcoming)
                                {
                                    <td class="on-top gra-mc-icon">
                                        <button type="button"
                                                class="btn btn-outline-danger btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteModal"
                                                data-id="@broadcast.Id"
                                                data-subject="@broadcast.Subject">
                                            <span class="fas fa-times fa-fw" aria-hidden="true"></span>
                                        </button>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.PaginateModel.MaxPage > 1)
            {
                <paginate paginateModel="@Model.PaginateModel"></paginate>
            }
        }
    </div>
</div>

@if (Model.Upcoming)
{
    <div class="row">
        <div class="modal fade"
             id="deleteModal"
             tabindex="-1"
             role="dialog"
             aria-labelledby="deleteModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title h4" id="deleteModalLabel">Delete Broadcast</h1>
                        <button type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close dialog">
                            
                        </button>
                    </div>
                    <div class="modal-body">
                        <span class="fas fa-exclamation-triangle fa-lg text-danger pt-2 me-3" aria-hidden="true"></span>
                        <span id="modal-text"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="button"
                                class="btn btn-outline-secondary"
                                data-bs-dismiss="modal"
                                style="margin-right: 1em;">
                            Cancel
                        </button>
                        <form asp-controller="Mail"
                              asp-action="BroadcastDelete"
                              method="post"
                              role="form"
                              style="display:inline">
                            <input id="Id" name="Id" type="hidden" />
                            <button type="submit"
                                    class="btn btn-outline-danger float-end"
                                    aria-label="Confirm">
                                <span class="fas fa-times fa-fw" aria-hidden="true"></span>
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $('.td-class').each(function () {
                $(this).children('a.rowlink').height($(this).height() + 11);
            });
        });
        $(window).resize(function () {
            $('.td-class').each(function () {
                $(this).children('a.rowlink').height($(this).height() + 11);
            });
        });

        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');
            var subject = button.data('subject');
            var modal = $(this);
            modal.find('#modal-text').text('Are you sure you wish to delete the Broadcast "' + subject + '" ?');
            modal.find('#Id').val(id);
        })
    </script>
}