@model GRA.Controllers.ViewModel.MissionControl.SystemInformationViewModel
<div class="row row-spacing">
    <div class="col-xs-12 col-sm-3">
        <a href="https://www.greatreadingadventure.com/" target="_blank">
            <img src="~/images/great-reading-adventure-logo@1x.png"
                 class="img-responsive" />
        </a>
    </div>
    <div class="col-xs-12 col-sm-6">
        <table class="table table-striped table-bordered table-condensed"
               style="margin-top: 3rem;">
            <tbody>
                @foreach (var key in Model.Settings.Keys)
                {
                    <tr>
                        <td><strong>@key</strong></td>
                        <td>@Model.Settings[key]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row row-spacing">
    <div class="col-xs-12 col-sm-6">
        <h3>Versions</h3>
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Version</th>
                </tr>
            </thead>
            <tbody>
                <tr class="info">
                    <td>@Model.Assembly</td>
                    <td>@Model.Version</td>
                </tr>
                @foreach (var key in Model.Assemblies.Keys)
                {
                    <tr>
                        <td>@key</td>
                        <td>@Model.Assemblies[key]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-xs-12 col-sm-6">
        <h3>Runtime Settings</h3>
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Setting</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var key in Model.RuntimeSettings.Keys)
                {
                    <tr>
                        <td>@key</td>
                        <td>@Model.RuntimeSettings[key]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
