@model GRA.Controllers.ViewModel.Challenge.ChallengeListViewModel

<div class="row">
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="deleteModalLabel">Delete challenge</h4>
                </div>
                <div class="modal-body">
                    <span class="fa fa-exclamation-triangle" aria-hidden="true"></span>
                    <span id="modal-text"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-right: 1em;">Cancel</button>
                    <form asp-controller="Challenge" asp-action="Delete" method="post" role="form" style="display:inline">
                        <input id="Id" name="Id" type="hidden" />
                        <button type="submit" class="btn btn-danger pull-right" aria-label="Confirm">
                            <span class="fa fa-remove" aria-hidden="true"></span>
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h1>Challenge!</h1>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <ul class="nav nav-pills" style="padding: 10px 0;">
            <li ActiveBy routeKey="FilterBy" value=""><a asp-action="Index" asp-route-Search="@Model.Search">All</a></li>
            <li ActiveBy routeKey="FilterBy" value="System"><a asp-action="Index" asp-route-Search="@Model.Search" asp-route-FilterBy="System">System</a></li>
            <li ActiveBy routeKey="FilterBy" value="Branch"><a asp-action="Index" asp-route-Search="@Model.Search" asp-route-FilterBy="Branch">Branch</a></li>
            <li ActiveBy routeKey="FilterBy" value="Mine"><a asp-action="Index" asp-route-Search="@Model.Search" asp-route-FilterBy="Mine">Mine</a></li>
        </ul>
    </div>
</div>

<form asp-controller="Challenge" asp-action="Index" asp-route-FilterBy="@Model.FilterBy" method="post" role="form">
    <div class="row" style="padding: 10px 0;">
        <div class="col-xs-10">
            <input class="form-control" />
        </div>
        <div class="col-xs-2">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
</form>

<div class="row" style="padding: 10px 0;">
    <div class="col-xs-12">
        <a asp-action="Create" class="btn btn-default">Create a new challenge</a>
    </div>
</div>

<div class="row" style="padding: 10px 0;">
    <div class="col-xs-12">
        @if (Model.Challenges.Count() == 0)
        {
            <div class="alert alert-warning">No Challenges</div>
        }
        else
        {
            <div>
                <table class="table table-condensed table-bordered link-table">
                    <thead>
                        <tr>
                            <th width="90%">Name</th>
                            <th width="10%">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var challenge in Model.Challenges)
                        {
                            <tr>
                                <td class="td-class">
                                    <a asp-action="Edit" asp-route-id="@challenge.Id" class="rowlink">
                                        @challenge.Name
                                    </a>
                                </td>
                                <td class="on-top">
                                    <button type="button"
                                            class="btn btn-danger btn-xs"
                                            data-toggle="modal"
                                            data-target="#deleteModal"
                                            data-id="@challenge.Id"
                                            data-name="@challenge.Name">
                                        <span class="fa fa-remove" aria-hidden="true"></span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <paginate paginateModel="@Model.PaginateModel"></paginate>
        }
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function() {
            $('.td-class').each(function() {
                $(this).children('a.rowlink').height($(this).height() + 11);
            });
        });
        $(window).resize(function() {
            $('.td-class').each(function() {
                $(this).children('a.rowlink').height($(this).height() + 11);
            });
        });

        $('#deleteModal').on('show.bs.modal', function(event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');
            var name = button.data('name');
            var modal = $(this);
            modal.find('#modal-text').text('Are you sure you wish to delete the challenge "' + name + '" ?');
            modal.find('#Id').val(id);
        })
    </script>
}