@model GRA.Controllers.ViewModel.MissionControl.EmailManagement.EmailDetailViewModel

<form asp-action="@Model.Action" method="post" role="form" enctype="multipart/form-data" style="padding-top:10px;">
    <input asp-for="Action" type="hidden" />
    @if (Model.Action == nameof(EmailManagementController.Edit))
    {
        <input asp-for="EmailTemplate.Id" type="hidden" />
    }

    <div class="row">
        <div class="col-xs-12">
            <div class="form-group">
                <label asp-for="EmailTemplate.Description" class="control-label"></label>
                <input asp-for="EmailTemplate.Description" class="form-control" />
                <span asp-validation-for="EmailTemplate.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailTemplate.Subject" class="control-label"></label>
                <input asp-for="EmailTemplate.Subject" class="form-control" />
                <span asp-validation-for="EmailTemplate.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailTemplate.FromName" class="control-label"></label>
                <input asp-for="EmailTemplate.FromName" value="@Model.EmailTemplate.FromName" class="form-control" hidden/>
                <span asp-validation-for="EmailTemplate.FromName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailTemplate.FromAddress" class="control-label"></label>
                <input asp-for="EmailTemplate.FromAddress" value="@Model.EmailTemplate.FromAddress" class="form-control" hidden/>
                <span asp-validation-for="EmailTemplate.FromAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailTemplate.BodyText" class="control-label"></label>
                <textarea asp-for="EmailTemplate.BodyText" class="form-control"></textarea>
                <span asp-validation-for="EmailTemplate.BodyText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailTemplate.BodyHtml" class="control-label"></label>
                <textarea asp-for="EmailTemplate.BodyHtml" class="form-control"></textarea>
                <span asp-validation-for="EmailTemplate.BodyHtml" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-default">Return to List</a>
                <button type="submit" id="Submit" name="Submit" value="Submit" class="btn btn-primary btn-spinner">
                    <span class="buttonText">Save Email Template</span>
                    <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
                </button>
            </div>

        </div>
    </div>
</form>