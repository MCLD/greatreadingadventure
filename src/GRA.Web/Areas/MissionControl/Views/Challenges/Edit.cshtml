@model GRA.Controllers.ViewModel.MissionControl.Challenges.ChallengesDetailViewModel
@using GRA.Domain.Model

@section styles {
    <link rel="stylesheet" href="/css/markdown.min.css" />
    <style>
        textarea#wmd-input {
            height: 200px !important;
        }
    </style>
}

@if (!string.IsNullOrEmpty(Model.CreatedByName))
{
    <div class="fs-5 mt-2 mb-3">
        Created By:
        @if (Model.CanViewParticipants)
        {
            <a aria-label="@Model.CreatedByName (Opens new window)"
               asp-controller="Participants"
               asp-action="@nameof(ParticipantsController.Detail)"
               asp-route-id="@Model.Challenge.CreatedBy"
               target="_blank">@Model.CreatedByName</a>
        }
        else
        {
            @Model.CreatedByName
        }
        on @Model.Challenge.CreatedAt
    </div>
}

@if (!string.IsNullOrEmpty(Model.MaxPointsWarningMessage))
{
    <div class="col-12 col-sm-6 offset-sm-3 mb-3">
        <div class="alert alert-warning d-flex align-items-stretch">
            <span class="fas fa-exclamation-circle fa-2x pt-2 me-3"
                  aria-hidden="true"></span>
            <span>@Model.MaxPointsWarningMessage</span>
        </div>
    </div>
}

<form asp-controller="Challenges"
      id="challengeForm"
      method="post"
      role="form"
      enctype="multipart/form-data">
    @if (Model.AddTask)
    {
        <div class="row">
            <div class="modal fade"
                 id="addModal"
                 tabindex="-1"
                 role="dialog"
                 aria-labelledby="addModalLabel">
                <div class="modal-dialog modal-xl" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="addModalLabel">Add task</h4>
                            <button type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <input asp-for="Task.ChallengeTaskType"
                                   value="@ChallengeTaskType.Action"
                                   type="hidden" />
                            <ul class="nav nav-tabs" role="tablist">
                                <li role="presentation" class="nav-item">
                                    <a id="actionTab"
                                       class="nav-link active"
                                       href="#action"
                                       aria-controls="action"
                                       role="tab"
                                       data-bs-toggle="tab">Action</a>
                                </li>
                                <li role="presentation" class="nav-item">
                                    <a id="bookTab"
                                       class="nav-link"
                                       href="#book"
                                       aria-controls="book"
                                       role="tab"
                                       data-bs-toggle="tab">Book</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div role="tabpanel"
                                     class="tab-pane gra-tab-pane active"
                                     id="action">
                                    <div class="mb-3">
                                        <label asp-for="Task.Title"
                                               class="col-form-label">Description</label>
                                        <div id="wmd-button-bar"></div>
                                        <textarea asp-for="Task.Title"
                                                  id="wmd-input"
                                                  class="form-control wmd-input actionTitle"
                                                  data-val-required="The Description field is required."></textarea>
                                        <br /><label class="col-form-label">Preview</label>
                                        <div id="preview"></div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="input-group">
                                            <input type="file"
                                                   class="form-control task-upload-file"
                                                   asp-for="TaskUploadFile"
                                                   accept=".png,.jpg,.jpeg" />
                                            <button class="btn btn-outline-secondary"
                                                    type="button"
                                                    onclick="$('.task-upload-file').val('')">
                                                Clear selection
                                            </button>
                                        </div>
                                        <span asp-validation-for="TaskUploadFile"
                                              class="text-danger"></span>
                                    </div>
                                </div>
                                <div role="tabpanel" class="tab-pane gra-tab-pane" id="book">
                                    <div class="mb-3">
                                        <label asp-for="Task.Title" class="col-form-label"></label>
                                        <input asp-for="Task.Title"
                                               id="bookTitle"
                                               class="form-control"
                                               disabled />
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Task.Author" class="col-form-label"></label>
                                        <input asp-for="Task.Author" class="form-control" />
                                        <span asp-validation-for="Task.Author"
                                              class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Task.Isbn" class="col-form-label"></label>
                                        <input asp-for="Task.Isbn" class="form-control" />
                                        <span asp-validation-for="Task.Isbn"
                                              class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Task.Url" class="col-form-label"></label>
                                        <input asp-for="Task.Url" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="col-form-label">Add a file</label>
                                        <div class="input-group">
                                            <input type="file"
                                                   class="form-control task-upload-file"
                                                   asp-for="TaskUploadFile"
                                                   accept=".png,.jpg,.jpeg" />
                                            <button class="btn btn-outline-secondary"
                                                    type="button"
                                                    onclick="$('.task-upload-file').val('')">
                                                Clear selection
                                            </button>
                                        </div>
                                        <span asp-validation-for="TaskUploadFile"
                                              class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button"
                                    class="btn btn-outline-secondary"
                                    data-bs-dismiss="modal"
                                    button-spinner>
                                Cancel
                            </button>
                            <button type="submit"
                                    asp-action="AddTask"
                                    class="btn btn-primary float-end"
                                    aria-label="Confirm"
                                    button-spinner>
                                <span class="buttonText">Add</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.Task != null)
    {
        <div class="row">
            <div class="modal fade"
                 id="editModal"
                 tabindex="-1"
                 role="dialog"
                 aria-labelledby="editModalLabel">
                <div class="modal-dialog modal-xl" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="editModalLabel">Edit task</h4>
                        </div>
                        <div class="modal-body">
                            <input asp-for="Task.Id" type="hidden" />
                            <input asp-for="Task.Position" type="hidden" />
                            <input asp-for="Task.ChallengeId" type="hidden" />
                            <input asp-for="Task.ChallengeTaskType" type="hidden" />
                            <input asp-for="Task.Filename" type="hidden" />
                            <ul class="nav nav-tabs" role="tablist">
                                <li role="presentation" class="nav-item">
                                    <a id="actionTab"
                                       class="nav-link @(Model.Task.ChallengeTaskType == ChallengeTaskType.Action ? " active" : "" )"
                                       href="#action"
                                       aria-controls="action"
                                       role="tab"
                                       data-bs-toggle="tab">Action</a>
                                </li>
                                <li role="presentation" class="nav-item">
                                    <a id="bookTab"
                                       class="nav-link @(Model.Task.ChallengeTaskType == ChallengeTaskType.Book ? " active" : "" )"
                                       href="#book"
                                       aria-controls="book"
                                       role="tab"
                                       data-bs-toggle="tab">Book</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div role="tabpanel"
                                     class="tab-pane gra-tab-pane @(Model.Task.ChallengeTaskType == ChallengeTaskType.Action ? " active" : "" )"
                                     id="action">
                                    <div class="mb-3">
                                        <label asp-for="Task.Title"
                                               class="col-form-label">Description</label>
                                        <div id="wmd-button-bar"></div>
                                        <textarea asp-for="Task.Title"
                                                  id="wmd-input"
                                                  class="form-control wmd-input actionTitle"
                                                  data-val-required="The Description field is required."
                                                  disabled="@(Model.Task.ChallengeTaskType == ChallengeTaskType.Action ? null : "disabled")"></textarea>
                                        <br /><label class="col-form-label">Preview</label>
                                        <div id="preview"></div>
                                    </div>
                                    <div>
                                        @if (string.IsNullOrWhiteSpace(Model.Task.Filename))
                                        {
                                            <label class="col-form-label">Add a file</label>
                                        }
                                        else
                                        {
                                            <label class="col-form-label">
                                                Update or Remove File &ndash;
                                                <a aria-label="Link (opens new window)"
                                                   href="@Model.TaskFilePath"
                                                   target="_blank">
                                                    @Model.Task.Filename
                                                </a>
                                            </label>
                                            <div class="fileRemoveAlert d-none alert alert-danger">
                                                File will be removed upon save.
                                            </div>
                                        }
                                        <div class="input-group">
                                            <input type="file"
                                                   class="form-control task-upload-file"
                                                   asp-for="TaskUploadFile"
                                                   accept=".png,.jpg,.jpeg" />
                                            <button class="btn btn-outline-secondary"
                                                    type="button"
                                                    onclick="$('.task-upload-file').val('')">
                                                Clear selection
                                            </button>
                                        </div>
                                        <span asp-validation-for="TaskUploadFile"
                                              class="text-danger"></span>
                                        @if (!string.IsNullOrWhiteSpace(Model.Task.Filename))
                                        {
                                            <button type="button"
                                                    class="btn btn-outline-warning mt-2 clearTaskFile">
                                                Remove attached file
                                            </button>
                                        }
                                    </div>
                                </div>
                                <div role="tabpanel"
                                     class="tab-pane gra-tab-pane @(Model.Task.ChallengeTaskType == ChallengeTaskType.Book ? " active" : "" )"
                                     id="book">
                                    <div class="mb-3">
                                        <label asp-for="Task.Title" class="col-form-label"></label>
                                        <input asp-for="Task.Title"
                                               id="bookTitle"
                                               class="form-control"
                                               disabled="@(Model.Task.ChallengeTaskType == ChallengeTaskType.Book ? null : " disabled")" />
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Task.Author" class="col-form-label"></label>
                                        <input asp-for="Task.Author" class="form-control" />
                                        <span asp-validation-for="Task.Author"
                                              class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Task.Isbn" class="col-form-label"></label>
                                        <input asp-for="Task.Isbn" class="form-control" />
                                        <span asp-validation-for="Task.Isbn"
                                              class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Task.Url" class="col-form-label"></label>
                                        <input asp-for="Task.Url" class="form-control" />
                                    </div>
                                    <div>
                                        @if (string.IsNullOrWhiteSpace(Model.Task.Filename))
                                        {
                                            <label class="col-form-label">Add a file</label>
                                        }
                                        else
                                        {
                                            <label class="col-form-label">
                                                Update or Remove File &ndash;
                                                <a aria-label="Link (opens new window)"
                                                   href="@Model.TaskFilePath"
                                                   target="_blank">
                                                    @Model.Task.Filename
                                                </a>
                                            </label>
                                            <div class="fileRemoveAlert d-none alert alert-danger">
                                                File will be removed upon save.
                                            </div>
                                        }
                                        <div class="input-group">
                                            <input type="file"
                                                   class="form-control task-upload-file"
                                                   asp-for="TaskUploadFile"
                                                   accept=".png,.jpg,.jpeg" />
                                            <button class="btn btn-outline-secondary"
                                                    type="button"
                                                    onclick="$('.task-upload-file').val('')">
                                                Clear selection
                                            </button>
                                        </div>
                                        <span asp-validation-for="TaskUploadFile"
                                              class="text-danger"></span>
                                        @if (!string.IsNullOrWhiteSpace(Model.Task.Filename))
                                        {
                                            <button type="button"
                                                    class="btn btn-outline-warning mt-2 clearTaskFile">
                                                Remove attached file
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button"
                                    class="btn btn-outline-secondary"
                                    data-bs-dismiss="modal"
                                    button-spinner>
                                Cancel
                            </button>
                            <button type="submit"
                                    asp-action="ModifyTask"
                                    class="btn btn-primary float-end"
                                    aria-label="Confirm"
                                    button-spinner>
                                <span class="buttonText">Save</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="modal fade"
             id="deleteModal"
             tabindex="-1"
             role="dialog"
             aria-labelledby="deleteModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="deleteModalLabel">Delete task</h4>
                        <button type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body d-flex align-items-stretch">
                        <span class="fas fa-exclamation-triangle fa-lg text-danger pt-2 me-3"
                              aria-hidden="true"></span>
                        <span id="modal-text"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="button"
                                class="btn btn-outline-secondary"
                                data-bs-dismiss="modal">
                            Cancel
                        </button>
                        <button type="submit"
                                id="DeleteTask"
                                asp-action="DeleteTask"
                                class="btn btn-outline-danger"
                                aria-label="Confirm"
                                button-spinner>
                            <span class="fas fa-times" aria-hidden="true"></span>
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input asp-for="Challenge.Id" type="hidden" />
    <input asp-for="Challenge.BadgeId" type="hidden" />
    <input asp-for="CanEditGroups" type="hidden" />
    <input asp-for="CanManageEvents" type="hidden" />
    <input asp-for="CanViewTriggers" type="hidden" />
    <input asp-for="UseBadgeMaker" type="hidden" />
    <input asp-for="BadgeMakerUrl" type="hidden" />
    <input asp-for="BadgeMakerImage" type="hidden" />
    @if (Model.Groups.Count > 0)
    {
        <div class="list-group mb-3"
             id="accordion"
             role="tablist"
             aria-multiselectable="true">
            <div class="card">
                <div class="card-header" role="tab" id="headingGroups">
                    <h4 class="card-title">
                        <a role="button"
                           data-bs-toggle="collapse"
                           data-bs-parent="#accordion"
                           href="#collapseGroups"
                           aria-expanded="false"
                           aria-controls="collapseGroups">
                            Challenge Groups
                        </a>
                    </h4>
                </div>
                <div id="collapseGroups"
                     class="card-collapse collapse"
                     role="tabpanel"
                     aria-labelledby="headingGroups">
                    <div class="card-body">
                        The following group(s) contain this challenge:
                        <ul>
                            @foreach (var group in Model.Groups)
                            {
                                @if (Model.CanEditGroups)
                                {
                                    <li>
                                        <a aria-label="@group.Name (Opens new window)"
                                           asp-action="EditGroup"
                                           asp-route-id="@group.Id"
                                           target="_blank">@group.Name</a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a aria-label="@group.Name (Opens new window)"
                                           asp-area=""
                                           asp-controller="Challenges"
                                           asp-action="List"
                                           asp-route-id="@group.Stub"
                                           target="_blank">@group.Name</a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.RelatedEvents.Count > 0)
    {
        <div class="list-group mb-3"
             id="accordion"
             role="tablist"
             aria-multiselectable="true">
            <div class="card">
                <div class="card-header" role="tab" id="headingEvents">
                    <h4 class="card-title">
                        <a role="button"
                           data-bs-toggle="collapse"
                           data-bs-parent="#accordion"
                           href="#collapseEvents"
                           aria-expanded="false"
                           aria-controls="collapseEvents">
                            Related Events
                        </a>
                    </h4>
                </div>
                <div id="collapseEvents"
                     class="card-collapse collapse"
                     role="tabpanel"
                     aria-labelledby="headingEvents">
                    <div class="card-body">
                        The following event(s) are related to this challenge:
                        <ul>
                            @foreach (var graEvent in Model.RelatedEvents)
                            {
                                @if (Model.CanManageEvents)
                                {
                                    <li>
                                        <a aria-label="@graEvent.Name (Opens new window)"
                                           asp-controller="Events"
                                           asp-action="Edit"
                                           asp-route-id="@graEvent.Id"
                                           target="_blank">@graEvent.Name</a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a aria-label="@graEvent.Id (Opens new window)"
                                           asp-area=""
                                           asp-controller="Events"
                                           asp-action="Detail"
                                           asp-route-id="@graEvent.Id"
                                           target="_blank">@graEvent.Id</a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.DependentTriggers.Count > 0)
    {
        <div class="list-group mb-3"
             id="accordion"
             role="tablist"
             aria-multiselectable="true">
            <div class="card">
                <div class="card-header" role="tab" id="headingOne">
                    <h4 class="card-title">
                        <a role="button"
                           data-bs-toggle="collapse"
                           data-bs-parent="#accordion"
                           href="#collapseOne"
                           aria-expanded="false"
                           aria-controls="collapseOne">
                            Dependent Triggers
                        </a>
                    </h4>
                </div>
                <div id="collapseOne"
                     class="card-collapse collapse"
                     role="tabpanel"
                     aria-labelledby="headingOne">
                    <div class="card-body">
                        The following trigger(s) depend on this challenge:
                        <ul>
                            @foreach (var trigger in Model.DependentTriggers)
                            {
                                @if (Model.CanViewTriggers)
                                {
                                    <li>
                                        <a aria-label="@trigger.Name (opens new window)"
                                           asp-controller="Triggers"
                                           asp-action="Edit"
                                           asp-route-id="@trigger.Id"
                                           target="_blank">
                                            @trigger.Name
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        @trigger.Name
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="col-12">
            <label class="col-form-label">Status</label>
            <input class="form-control"
                   value=@(Model.Challenge.IsActive ? "Active" : "Inactive" )
                   ignore
                   disabled />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <label asp-for="Challenge.Name" class="col-form-label"></label>
            <input asp-for="Challenge.Name"
                   class="form-control ignore"
                   readonly="@(!Model.IgnorePointLimits && !string.IsNullOrEmpty(Model.MaxPointsWarningMessage) ? "readonly" : null)" />
            <span asp-validation-for="Challenge.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <label asp-for="Challenge.Description" class="col-form-label"></label>
            <textarea asp-for="Challenge.Description"
                      class="form-control ignore"
                      readonly="@(!Model.IgnorePointLimits && !string.IsNullOrEmpty(Model.MaxPointsWarningMessage) ? "readonly" : null)"> </textarea>
            <span asp-validation-for="Challenge.Description" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-sm-6 mb-3">
            <label asp-for="Challenge.PointsAwarded" class="col-form-label"></label>
            <label style="font-size: 12px;">@Model.MaxPointsMessage</label>
            <input asp-for="Challenge.PointsAwarded"
                   type="number"
                   min="1"
                   class="form-control ignore"
                   readonly="@(!Model.IgnorePointLimits && !string.IsNullOrEmpty(Model.MaxPointsWarningMessage) ? "readonly" : null)" />
            <span asp-validation-for="Challenge.PointsAwarded" class="text-danger"></span>
        </div>

        <div class="col-12 col-sm-6 mb-3">
            <label asp-for="Challenge.TasksToComplete" class="col-form-label"></label>
            <input asp-for="Challenge.TasksToComplete"
                   type="number"
                   min="1"
                   class="form-control ignore"
                   readonly="@(!Model.IgnorePointLimits && !string.IsNullOrEmpty(Model.MaxPointsWarningMessage) ? "readonly" : null)" />
            <span asp-validation-for="Challenge.TasksToComplete" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <label asp-for="Challenge.CategoryIds" class="col-form-label"></label>
            <select asp-for="Challenge.CategoryIds"
                    asp-items="Model.CategoryList"
                    autocomplete="off"
                    class="form-control"
                    disabled="@(!Model.IgnorePointLimits && !string.IsNullOrEmpty(Model.MaxPointsWarningMessage) ? "disabled" : null)"
                    multiple="multiple"
                    size="1"></select>
            <span asp-validation-for="Challenge.CategoryIds" class="text-danger"></span>
        </div>
        <div class="col-12">
            <small>
                <em>
                    To remove a category: select it and use your backspace or delete key.
                </em>
            </small>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <label asp-for="Challenge.LimitToSystemId" class="col-form-label"></label>
            <select asp-for="Challenge.LimitToSystemId"
                    asp-items="Model.SystemList"
                    class="form-control"
                    disabled="@(!Model.IgnorePointLimits && !string.IsNullOrEmpty(Model.MaxPointsWarningMessage) ? "disabled" : null)">
                <option value="">No</option>
            </select>
            <span asp-validation-for="Challenge.LimitToSystemId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <label asp-for="Challenge.LimitToBranchId" class="col-form-label"></label>
            <select asp-for="Challenge.LimitToBranchId"
                    asp-items="Model.BranchList"
                    class="form-control"
                    disabled="@(!Model.IgnorePointLimits && !string.IsNullOrEmpty(Model.MaxPointsWarningMessage) ? "disabled" : null)">
                <option value="">No</option>
            </select>
            <span asp-validation-for="Challenge.LimitToBranchId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <label asp-for="Challenge.AssociatedProgramId" class="col-form-label"></label>
            <select asp-for="Challenge.AssociatedProgramId"
                    asp-items="Model.ProgramList"
                    class="form-control"
                    disabled="@(!Model.IgnorePointLimits && !string.IsNullOrEmpty(Model.MaxPointsWarningMessage) ? "disabled" : null)">
                <option value="">No</option>
            </select>
            <span asp-validation-for="Challenge.AssociatedProgramId" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            @if (!string.IsNullOrWhiteSpace(Model.BadgePath))
            {
                <label class="col-form-label">Edit badge image</label>
            }
            else
            {
                <label class="col-form-label">Add a badge</label>
            }
        </div>

        <div class="col-12 col-sm-4 col-md-3">
            @if (!string.IsNullOrWhiteSpace(Model.BadgePath))
            {
                <input asp-for="BadgePath" type="hidden" />
                <img id="badgeImage" class="img-thumbnail badge-lg"
                     src="~/@Model.BadgePath?@DateTime.Now.ToString("yyMMddHHmmss")" />
                <span asp-validation-for="BadgeMakerImage" class="text-danger"></span>
            }
