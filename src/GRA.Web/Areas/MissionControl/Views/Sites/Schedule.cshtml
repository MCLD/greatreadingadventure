@model GRA.Controllers.ViewModel.MissionControl.Sites.SiteScheduleViewModel

@await Html.PartialAsync("_SitePartial")

<form asp-controller="Sites" asp-action="Schedule" method="post" role="form">
    <input asp-for="Id" type="hidden" />

    <div class="row row-spacing">
        <div class="col-12">
            <label class="col-form-label">Prior to Registration Opening</label>
            <em class="gra-preview-landings">
                Preview
                <a asp-area=""
                   asp-controller="Home"
                   asp-action="PreviewLanding"
                   asp-route-id="@nameof(GRA.Domain.Model.SiteStage.BeforeRegistration)"
                   target="_blank">Landing</a> /
                <a asp-area=""
                   asp-controller="Home"
                   asp-action="PreviewExit"
                   asp-route-id="@nameof(GRA.Domain.Model.SiteStage.BeforeRegistration)"
                   target="_blank">Exit</a>
            </em>
        </div>
    </div>

    <div class="row row-spacing">
        <div class="col-12">
            <label asp-for="RegistrationOpens" class="col-form-label"></label>
            <em class="gra-preview-landings">
                Preview
                <a asp-area=""
                   asp-controller="Home"
                   asp-action="PreviewLanding"
                   asp-route-id="@nameof(GRA.Domain.Model.SiteStage.RegistrationOpen)"
                   target="_blank">Landing</a> /
                <a asp-area=""
                   asp-controller="Home"
                   asp-action="PreviewExit"
                   asp-route-id="@nameof(GRA.Domain.Model.SiteStage.RegistrationOpen)"
                   target="_blank">Exit</a>
            </em>
            <div class="form-group date">
                @* timepicker *@
                <input asp-for="RegistrationOpens" type="datetime-local" class="form-control" />
            </div>
            <span asp-validation-for="RegistrationOpens" class="text-danger"></span>
        </div>
    </div>

    <div class="row row-spacing">
        <div class="col-12">
            <label asp-for="ProgramStarts" class="col-form-label"></label>
            <em class="gra-preview-landings">
                Preview
                <a asp-area=""
                   asp-controller="Home"
                   asp-action="PreviewLanding"
                   asp-route-id="@nameof(GRA.Domain.Model.SiteStage.ProgramOpen)"
                   target="_blank">Landing</a> /
                <a asp-area=""
                   asp-controller="Home"
                   asp-action="PreviewExit"
                   asp-route-id="@nameof(GRA.Domain.Model.SiteStage.ProgramOpen)"
                   target="_blank">Exit</a>
            </em>
            <div class="form-group date">
                @* timepicker *@
                <input asp-for="ProgramStarts" type="datetime-local" class="form-control" />
            </div>
            <span asp-validation-for="ProgramStarts" class="text-danger"></span>
        </div>
    </div>

    <div class="row row-spacing">
        <div class="col-12">
            <label asp-for="ProgramEnds" class="col-form-label"></label>
            <em class="gra-preview-landings">
                Preview
                <a asp-area=""
                   asp-controller="Home"
                   asp-action="PreviewLanding"
                   asp-route-id="@nameof(GRA.Domain.Model.SiteStage.ProgramEnded)"
                   target="_blank">Landing</a> /
                <a asp-area=""
                   asp-controller="Home"
                   asp-action="PreviewExit"
                   asp-route-id="@nameof(GRA.Domain.Model.SiteStage.ProgramEnded)"
                   target="_blank">Exit</a>
            </em>
            <div class="input-group date">
                @* timepicker *@
                <input asp-for="ProgramEnds" type="datetime-local" class="form-control" />
            </div>
            <span asp-validation-for="ProgramEnds" class="text-danger"></span>
        </div>
    </div>

    <div class="row row-spacing">
        <div class="col-12">
            <label asp-for="AccessClosed" class="col-form-label"></label>
            <em class="gra-preview-landings">
                Preview
                <a asp-area=""
                   asp-controller="Home"
                   asp-action="PreviewLanding"
                   asp-route-id="@nameof(GRA.Domain.Model.SiteStage.AccessClosed)"
                   target="_blank">Landing</a> /
                <a asp-area=""
                   asp-controller="Home"
                   asp-action="PreviewExit"
                   asp-route-id="@nameof(GRA.Domain.Model.SiteStage.AccessClosed)"
                   target="_blank">Exit</a>
            </em>
            <div class="form-group date datetimepicker">
                @* timepicker *@
                <input asp-for="AccessClosed" type="datetime-local" class="form-control" />
            </div>
            <span asp-validation-for="AccessClosed" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">Return to List</a>
        <button type="submit"
                id="Submit"
                name="Submit"
                value="Submit"
                class="btn btn-primary btn-spinner"
                button-spinner>
            <span class="buttonText">Save</span>
        </button>
    </div>
</form>

@section scripts {
    <style>
        .gra-preview-landings {
            display: inline-block;
            margin-left: 1rem;
        }
    </style>
}