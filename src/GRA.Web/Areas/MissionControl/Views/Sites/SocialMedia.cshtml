@model GRA.Controllers.ViewModel.MissionControl.Sites.SiteSocialMediaViewModel

@await Html.PartialAsync("_SitePartial")

<form asp-controller="Sites" asp-action="SocialMedia" method="post" role="form">
    <input asp-for="Id" type="hidden" />

    <div class="row row-spacing">
        <div class="col-12 col-sm-6">
            <label asp-for="TwitterAvatarMessage" class="col-form-label"></label>
            <span class="far fa-question-circle wide-tooltip" title="Default text for when a participant shares their avatar on Twitter" data-bs-toggle="tooltip" data-bs-placement="top"></span>
            <input asp-for="TwitterAvatarMessage" type="text" class="form-control" />
            <span asp-validation-for="TwitterAvatarMessage" class="text-danger"></span>
        </div>
        <div class="col-12 col-sm-6">
            <label asp-for="TwitterAvatarHashtags" class="col-form-label"></label>
            <span class="far fa-question-circle wide-tooltip" title="Hashtag to include when a participant shares their avatar on Twitter" data-bs-toggle="tooltip" data-bs-placement="top"></span>
            <input asp-for="TwitterAvatarHashtags" type="text" class="form-control" />
            <span asp-validation-for="TwitterAvatarHashtags" class="text-danger"></span>
        </div>
    </div>

    <div class="row row-spacing">
        <div class="col-12">
            <label asp-for="AvatarCardDescription" class="col-form-label"></label>
            <span class="far fa-question-circle wide-tooltip" title="Default text for when a participant shares their avatar on an Open Graph site such as Facebook" data-bs-toggle="tooltip" data-bs-placement="top"></span>
            <input asp-for="AvatarCardDescription" type="text" class="form-control" />
            <span asp-validation-for="AvatarCardDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Return to List</a>
        <button type="submit"
                id="Submit"
                name="Submit"
                value="Submit"
                class="btn btn-outline-primary btn-spinner"
                button-spinner>
            <span class="buttonText">Save</span>
        </button>
    </div>
</form>