@model GRA.Controllers.ViewModel.MissionControl.Participants.MailSendViewModel

<form asp-controller="Participants" asp-action="MailSend" method="post" role="form">
    <input asp-for="Id" type="hidden" />
    <div class="row mb-3">
        <div class="col-sm-8 offset-sm-2">
            <label asp-for="Subject" class="col-form-label"></label>
            <input asp-for="Subject" class="form-control" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-8 offset-sm-2">
            <label asp-for="Body" class="col-form-label"></label>
            <textarea asp-for="Body" class="form-control"></textarea>
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 offset-sm-2 d-flex d-print-none">
            <a asp-action="Index" class="btn btn-outline-secondary">Return to Participants List</a>
            <a asp-action="Mail"
               asp-route-id="@Model.Id"
               class="btn btn-outline-secondary ms-auto me-2">Return to Mail List</a>
            <button type="submit" class="btn btn-outline-primary">
                Send Mail
            </button>
        </div>
    </div>
</form>