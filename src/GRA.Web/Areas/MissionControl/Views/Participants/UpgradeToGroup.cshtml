@model GRA.Controllers.ViewModel.MissionControl.Participants.GroupUpgradeViewModel

<div class="row">
    <div class="col-sm-6 offset-sm-3">
        <form asp-action="CreateGroup">
            <input asp-for="Id" type="hidden" />
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Upgrade from family to group</h3>
                </div>
                <div class="card-body">
                    <p>
                        In order to add more people this family must be converted to a group.
                        Please enter a group name and select the appropriate group type.
                    </p>
                    <div class="mb-3">
                        <label asp-for="GroupInfo.Name" class="col-form-label"></label>
                        <input asp-for="GroupInfo.Name" class="form-control" />
                        <span asp-validation-for="GroupInfo.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="GroupInfo.GroupTypeId" class="col-form-label"></label>
                        <select asp-for="GroupInfo.GroupTypeId"
                                asp-items="Model.GroupTypes"
                                class="form-control"></select>
                        <span asp-validation-for="GroupInfo.GroupTypeId"
                              class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer clearfix">
                    <div class="float-end">
                        <a class="btn btn-outline-danger"
                           asp-action="Household" asp-route-id="@Model.Id">
                            <span class="buttonText">Cancel</span>
                        </a>
                        <button type="submit"
                                id="Submit"
                                name="Submit"
                                value="Submit"
                                class="btn btn-outline-primary btn-spinner"
                                button-spinner>
                            <span class="buttonText">Upgrade to group</span>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>