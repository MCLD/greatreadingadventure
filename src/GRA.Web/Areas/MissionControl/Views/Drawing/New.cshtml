@model GRA.Controllers.ViewModel.MissionControl.Drawing.DrawingNewViewModel

<form asp-controller="Drawing" asp-action="New" method="post" role="form">
    <input asp-for="Drawing.DrawingCriterionId" type="hidden" />

    <div class="row" style="padding: 10px 0;">
        <div class="col-12">
            <label class="col-form-label">Criteria</label>
            <input asp-for="Drawing.DrawingCriterion.Name" class="form-control" readonly />
        </div>
    </div>

    <div class="row row-spacing">
        <div class="col-12">
            <label asp-for="Drawing.Name" class="col-form-label"></label>
            <input asp-for="Drawing.Name" class="form-control" />
            <span asp-validation-for="Drawing.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row row-spacing">
        <div class="col-6">
            <label asp-for="Drawing.WinnerCount" class="col-form-label"></label>
            <input asp-for="Drawing.WinnerCount" min="1" class="form-control" />
            <span asp-validation-for="Drawing.WinnerCount" class="text-danger"></span>
        </div>

        <div class="col-6">
            <label class="col-form-label">Eligible Participants</label>
            <input asp-for="Drawing.DrawingCriterion.EligibleCount" type="text" class="form-control" readonly />
        </div>
    </div>

    <div class="row row-spacing">
        <div class="col-12">
            <label asp-for="Drawing.RedemptionInstructions" class="col-form-label"></label>
            <textarea asp-for="Drawing.RedemptionInstructions" class="form-control"></textarea>
            <span asp-validation-for="Drawing.RedemptionInstructions" class="text-danger"></span>
        </div>
    </div>

    @if (Model.CanSendMail)
    {
        <input asp-for="CanSendMail" type="hidden" />
        <div class="row row-spacing">
            <div class="col-12">
                <label asp-for="Drawing.NotificationSubject" class="col-form-label"></label>
                <input asp-for="Drawing.NotificationSubject" class="form-control" />
                <span asp-validation-for="Drawing.NotificationSubject" class="text-danger"></span>
            </div>
        </div>

        <div class="row row-spacing">
            <div class="col-12">
                <label asp-for="Drawing.NotificationMessage" class="col-form-label"></label>
                <textarea asp-for="Drawing.NotificationMessage" class="form-control"></textarea>
                <span asp-validation-for="Drawing.NotificationMessage" class="text-danger"></span>
            </div>
        </div>
    }
    <div class="mb-3">
        <a asp-action="Criteria" class="btn btn-outline-secondary">Return to Criteria List</a>
        <button type="submit"
                id="Submit"
                name="Submit"
                value="Submit"
                class="btn btn-outline-success"
                button-spinner>
            <span class="buttonText">Draw!</span>
        </button>
    </div>
</form>