@model GRA.Controllers.ViewModel.MissionControl.Roles.AuthorizationCodeListViewModel

@await Html.PartialAsync("_RolesPartial")

<div class="row">
    <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel">
        <div class="modal-dialog" role="document">
            <form asp-controller="Roles" asp-action="AddCode" method="post" role="form" style="display:inline">
                <input name="PaginateModel.CurrentPage" value="@Model.PaginateModel.CurrentPage" type="hidden" />
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close dialog"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="addModalLabel">Add Authorization Code</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label asp-for="AuthorizationCode.RoleId" class="control-label"></label>
                            <select id="addRole" asp-for="AuthorizationCode.RoleId" asp-items="Model.RoleList" class="form-control"></select>
                            <span asp-validation-for="AuthorizationCode.RoleId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AuthorizationCode.Code" class="control-label"></label>
                            <input id="addCode" asp-for="AuthorizationCode.Code" class="form-control" />
                            <span asp-validation-for="AuthorizationCode.Code" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AuthorizationCode.Description" class="control-label"></label>
                            <textarea id="addDescription" asp-for="AuthorizationCode.Description" class="form-control"></textarea>
                            <span asp-validation-for="AuthorizationCode.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AuthorizationCode.IsSingleUse" class="control-label"></label>
                            <span class="fa fa-question-circle-o" data-toggle="tooltip" title="Single use codes may be used once and then are deactivated."></span>
                            <select id="addSingle" asp-for="AuthorizationCode.IsSingleUse" class="form-control">
                                <option value="true">Single Use</option>
                                <option value="false">Multiple Use</option>
                            </select>
                            <span asp-validation-for="AuthorizationCode.IsSingleUse" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-right: 1em;">Cancel</button>
                        <button type="submit" class="btn btn-primary btn-spinner pull-right" aria-label="Confirm">
                            Add
                            <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel">
        <div class="modal-dialog" role="document">
            <form asp-controller="Roles" asp-action="EditCode" method="post" role="form" style="display:inline">
                <input name="PaginateModel.CurrentPage" value="@Model.PaginateModel.CurrentPage" type="hidden" />
                <input id="editId" name="AuthorizationCode.Id" type="hidden" />
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close dialog"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="editModalLabel">Edit Authorization Code</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label asp-for="AuthorizationCode.RoleId" class="control-label"></label>
                            <select id="editRole" asp-for="AuthorizationCode.RoleId" asp-items="Model.RoleList" class="form-control"></select>
                            <span asp-validation-for="AuthorizationCode.RoleId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AuthorizationCode.Code" class="control-label"></label>
                            <input id="editCode" asp-for="AuthorizationCode.Code" class="form-control" />
                            <span asp-validation-for="AuthorizationCode.Code" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AuthorizationCode.Description" class="control-label"></label>
                            <textarea id="editDescription" asp-for="AuthorizationCode.Description" class="form-control"></textarea>
                            <span asp-validation-for="AuthorizationCode.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AuthorizationCode.IsSingleUse" class="control-label"></label>
                            <span class="fa fa-question-circle-o" data-toggle="tooltip" title="Single use codes may be used once and then are deactivated."></span>
                            <select id="editingle" asp-for="AuthorizationCode.IsSingleUse" class="form-control">
                                <option value="true">Single Use</option>
                                <option value="false">Multiple Use</option>
                            </select>
                            <span asp-validation-for="AuthorizationCode.IsSingleUse" class="text-danger"></span>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-right: 1em;">Cancel</button>
                            <button type="submit" class="btn btn-primary btn-spinner pull-right" aria-label="Confirm">
                                Save
                                <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel">
        <div class="modal-dialog" role="document">
            <form asp-controller="Roles" asp-action="DeleteCode" method="post" role="form" style="display:inline">
                <input name="PaginateModel.CurrentPage" value="@Model.PaginateModel.CurrentPage" type="hidden" />
                <input id="deleteId" name="AuthorizationCode.Id" type="hidden" />
                <input id="deleteCode" name="AuthorizationCode.Code" type="hidden" />
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close dialog"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="deleteModalLabel">Delete Authorization Code</h4>
                    </div>
                    <div class="modal-body">
                        <span class="fa fa-exclamation-triangle" aria-hidden="true"></span>
                        <span id="modal-text"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-right: 1em;">Cancel</button>
                        <button type="submit" class="btn btn-danger btn-spinner pull-right" aria-label="Confirm">
                            <span class="fa fa-remove" aria-hidden="true"></span>
                            Delete
                            <span class="fa fa-spinner fa-pulse fa-lg fa-fw hidden"></span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row" style="padding: 10px 0;">
    <div class="col-xs-12">
        <a class="btn btn-default"
           data-toggle="modal"
           data-target="#addModal">Add a Authorization Code</a>
    </div>
</div>

<div class="row" style="padding: 10px 0;">
    <div class="col-xs-12">
        @if (Model.AuthorizationCodes.Count() == 0)
        {
            <div class="alert alert-warning">No Authorization Codes</div>
        }
        else
        {
            <div>
                <table class="table table-condensed table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Role</th>
                            <th>Can only be used once</th>
                            <th>Uses</th>
                            <th width="100">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var code in Model.AuthorizationCodes)
                        {
                            <tr>
                                <td>
                                    @code.Code
                                </td>
                                <td>
                                    @code.RoleName
                                </td>
                                <td>
                                    @(code.IsSingleUse ? "Yes" : "No")
                                </td>
                                <td>
                                    @code.Uses
                                </td>
                                <td>
                                    <button type="button"
                                            class="btn btn-primary btn-xs"
                                            data-toggle="modal"
                                            data-target="#editModal"
                                            data-id="@code.Id"
                                            data-role="@code.RoleId"
                                            data-code="@code.Code"
                                            data-description="@code.Description"
                                            data-single="@code.IsSingleUse">
                                        <span class="fa fa-2x fa-pencil" aria-hidden="true"></span>
                                    </button>
                                    <button type="button"
                                            class="btn btn-danger btn-xs"
                                            style="margin-left:16px;"
                                            data-toggle="modal"
                                            data-target="#deleteModal"
                                            data-id="@code.Id"
                                            data-code="@code.Code">
                                        <span class="fa fa-2x fa-remove" aria-hidden="true"></span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.PaginateModel.MaxPage > 1)
            {
                <paginate paginateModel="@Model.PaginateModel"></paginate>
            }
        }
    </div>
</div>

@section scripts {
    <script>
        $('[data-toggle="tooltip"]').tooltip();

        $("#editModal").on("show.bs.modal", function (e) {
            var button = $(e.relatedTarget);
            var id = button.data("id");
            var role = button.data("role");
            var code = button.data("code");
            var description = button.data("description");
            var single = button.data("single");
            var modal = $(this);
            modal.find("#editModalLabel").text("Edit Authorization Code - \"" + code + "\"");
            modal.find("#editId").val(id);
            modal.find("#editRole").val(role);
            modal.find("#editCode").val(code);
            modal.find("#editDescription").val(description);
            modal.find("#editSingle").val(single);
        });

        $("#deleteModal").on("show.bs.modal", function (e) {
            var button = $(e.relatedTarget);
            var id = button.data("id");
            var code = button.data("code");
            var modal = $(this);
            modal.find("#modal-text").text("Are you sure you want to delete the authorization code \"" + code + "\"?");
            modal.find("#deleteId").val(id);
            modal.find("#deleteCode").val(code);
        });
    </script>
}