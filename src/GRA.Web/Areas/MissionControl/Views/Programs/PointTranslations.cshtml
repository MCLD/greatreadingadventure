@model GRA.Controllers.ViewModel.MissionControl.Programs.PointTranslationsListViewModel

@Html.Partial("_ProgramsPartial")

<div class="row" style="padding: 10px 0;">
    <div class="col-xs-12">
        @if (Model.PointTranslations.Count() == 0)
        {
            <div class="alert alert-warning">No Point Translations</div>
        }
        else
        {
            <div>
                <table class="table table-condensed table-bordered link-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pointTranslation in Model.PointTranslations)
                        {
                            <tr>
                                <td class="td-class">
                                    <a asp-action="@nameof(ProgramsController.EditPointTranslation)" asp-route-id="@pointTranslation.Id" class="rowlink">
                                        @pointTranslation.TranslationName
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.PaginateModel.MaxPage > 1)
            {
                <paginate paginateModel="@Model.PaginateModel"></paginate>
            }
        }
    </div>
</div>

@section scripts {
    <script>
        $(window).on("load", function () {
            $(".td-class").each(function () {
                $(this).children("a.rowlink").height($(this).height() + 11);
            });
        });
        $(window).resize(function () {
            $(".td-class").each(function () {
                $(this).children("a.rowlink").height($(this).height() + 11);
            });
        });
    </script>
}