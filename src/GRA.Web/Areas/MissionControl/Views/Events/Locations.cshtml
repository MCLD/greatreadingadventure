@model GRA.Controllers.ViewModel.MissionControl.Events.LocationsListViewModel

<div class="row">
    <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel">
        <div class="modal-dialog" role="document">
            <form asp-controller="Events" asp-action="AddLocation" method="post" role="form" style="display:inline">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="addModalLabel">Add location</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label asp-for="Location.Name" class="control-label"></label>
                            <input asp-for="Location.Name" class="form-control" />
                            <span asp-validation-for="Location.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Location.Address" class="control-label"></label>
                            <input asp-for="Location.Address" class="form-control" />
                            <span asp-validation-for="Location.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Location.Url" class="control-label"></label>
                            <input asp-for="Location.Url" class="form-control" />
                            <span asp-validation-for="Location.Url" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Location.Telephone" class="control-label"></label>
                            <input asp-for="Location.Telephone" class="form-control" />
                            <span asp-validation-for="Location.Telephone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-right: 1em;">Cancel</button>
                        <button type="submit" class="btn btn-primary pull-right" aria-label="Confirm">
                            Add
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel">
        <div class="modal-dialog" role="document">
            <form asp-controller="Events" asp-action="EditLocation" method="post" role="form" style="display:inline">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="editModalLabel">Edit location</h4>
                    </div>
                    <div class="modal-body">
                        <input id="Location_Id" name="Location.Id" type="hidden" />
                        <div class="form-group">
                            <label asp-for="Location.Name" class="control-label"></label>
                            <input asp-for="Location.Name" class="form-control" />
                            <span asp-validation-for="Location.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Location.Address" class="control-label"></label>
                            <input asp-for="Location.Address" class="form-control" />
                            <span asp-validation-for="Location.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Location.Url" class="control-label"></label>
                            <input asp-for="Location.Url" class="form-control" />
                            <span asp-validation-for="Location.Url" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Location.Telephone" class="control-label"></label>
                            <input asp-for="Location.Telephone" class="form-control" />
                            <span asp-validation-for="Location.Telephone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-right: 1em;">Cancel</button>
                        <button type="submit" class="btn btn-primary pull-right" aria-label="Confirm">
                            Save
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="deleteModalLabel">Delete location</h4>
                </div>
                <div class="modal-body">
                    <span class="fa fa-exclamation-triangle" aria-hidden="true"></span>
                    <span id="modal-text"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-right: 1em;">Cancel</button>
                    <form asp-controller="Events" asp-action="DeleteLocation" method="post" role="form" style="display:inline">
                        <input id="Id" name="Id" type="hidden" />
                        <button type="submit" class="btn btn-danger pull-right" aria-label="Confirm">
                            <span class="fa fa-remove" aria-hidden="true"></span>
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <ul class="nav nav-pills" style="padding: 10px 0;">
            <li ActiveBy routeKey="Action" value="Index"><a asp-action="Index">Events</a></li>
            <li ActiveBy routeKey="Action" value="CommunityExperiences"><a asp-action="CommunityExperiences">Community Experiences</a></li>
            <li ActiveBy routeKey="Action" value="Locations"><a asp-action="Locations">Locations</a></li>
        </ul>
    </div>
</div>

<div class="row" style="padding: 10px 0;">
    <div class="col-xs-12">
        <a class="btn btn-default"
           data-toggle="modal"
           data-target="#addModal">Add a Location</a>
    </div>
</div>

<div class="row" style="padding: 10px 0;">
    <div class="col-xs-12">
        @if (Model.Locations.Count() == 0)
        {
            <div class="alert alert-warning">No Locations</div>
        }
        else
        {
            <div>
                <table class="table table-condensed table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th># of Events</th>
                            <th width="100">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var location in Model.Locations)
                        {
                            <tr>
                                <td>
                                    @location.Name
                                </td>
                                <td>
                                    @location.Address
                                </td>
                                <td>
                                    @location.EventCount
                                </td>
                                <td>
                                    <button type="submit"
                                            class="btn btn-primary btn-xs"
                                            data-toggle="modal"
                                            data-target="#editModal"
                                            data-id="@location.Id"
                                            data-name="@location.Name"
                                            data-address="@location.Address"
                                            data-url="@location.Url"
                                            data-telephone="@location.Telephone">
                                        <span class="fa fa-2x fa-pencil" aria-hidden="true"></span>
                                    </button>
                                    <button type="button"
                                            class="btn btn-danger btn-xs"
                                            style="margin-left:16px;"
                                            data-toggle="modal"
                                            data-target="#deleteModal"
                                            data-id="@location.Id"
                                            data-name="@location.Name">
                                        <span class="fa fa-2x fa-remove" aria-hidden="true"></span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.PaginateModel.MaxPage > 1)
            {
                <paginate paginateModel="@Model.PaginateModel"></paginate>
            }
        }
    </div>
</div>

@section scripts
{
    <script>
        $('#editModal').on('show.bs.modal', function(event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');
            var name = button.data('name');
            var address = button.data('address');
            var url = button.data('url');
            var telephone = button.data('telephone');
            var modal = $(this);
            modal.find('#editModalLabel').text('Edit location - "' + name + '"');
            modal.find('#Location_Id').val(id);
            modal.find('#Location_Name').val(name);
            modal.find('#Location_Address').val(address);
            modal.find('#Location_Url').val(url);
            modal.find('#Location_Telephone').val(telephone);
        })

        $('#deleteModal').on('show.bs.modal', function(event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');
            var name = button.data('name');
            var modal = $(this);
            modal.find('#modal-text').text('Are you sure you wish to delete the location "' + name + '" ?');
            modal.find('#Id').val(id);
        })
    </script>
}