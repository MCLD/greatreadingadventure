@model GRA.Controllers.ViewModel.MissionControl.Events.EventsDetailViewModel

@section styles {
    <style>
        .tab-pane {
            border-left: 1px solid #ddd;
            border-right: 1px solid #ddd;
            border-bottom: 1px solid #ddd;
            border-radius: 0px 0px 5px 5px;
            padding: 10px;
        }

        .nav-tabs {
            margin-bottom: 0;
        }
    </style>
}

<form asp-controller="Events"
      asp-action="AddEditStreaming"
      method="post"
      role="form"
      enctype="multipart/form-data">
    <input asp-for="Event.ParentEventId" type="hidden" />
    <input name="Event.IsStreaming" value="true" type="hidden" />
    @if (Model.Editing)
    {
        <input name="Event.Id" value="@Model.Event.Id" type="hidden" />
        <input name="Event.CreatedBy" value="@Model.Event.CreatedBy"
               type="hidden" />
        <input name="Editing" value="true" type="hidden" />

        <input asp-for="Event.IsActive" type="hidden" />
        <input asp-for="Event.IsValid" type="hidden" />
        <input asp-for="Event.RelatedBranchId" type="hidden" />
        <input asp-for="Event.RelatedSystemId" type="hidden" />
        <input asp-for="Event.RelatedTriggerId" type="hidden" />

        <div style="font-size:large;  padding-top:10px;">
            Created By:
            @if (Model.CanViewParticipants)
            {
                <a asp-controller="Participants"
                   asp-action="@nameof(ParticipantsController.Detail)"
                   asp-route-id="@Model.Event.CreatedBy"
                   target="_blank">@Model.CreatedByName</a>
            }
            else
            {
                @Model.CreatedByName
            }
            on @Model.Event.CreatedAt
        </div>

        @if (Model.CanAddSecretCode)
        {
            <input asp-for="CanAddSecretCode" type="hidden" />
            @if (Model.Event.RelatedTriggerId.HasValue)
            {
                <div class="row my-4">
                    <div class="col-12">
                        <a asp-controller="Triggers"
                           asp-action="Edit"
                           asp-route-id="@Model.Event.RelatedTriggerId"
                           target="_blank"
                           class="btn btn-secondary">
                            View Related Trigger
                        </a>
                    </div>
                </div>
            }
        }
    }

    <div class="row my-4">
        <div class="col-12">
            <label asp-for="Event.Name" class="col-form-label"></label>
            <input asp-for="Event.Name" class="form-control event-name-field" />
            <span asp-validation-for="Event.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row my-4">
        <div class="col-8 col-sm-10 ">
            <div class="row">
                <div class="col-12 col-sm-6 row-spacing">
                    <label asp-for="Event.StartDate" class="col-form-label"></label>
                    <div class="mb-3 date" id="pickerStart">
                        <input asp-for="Event.StartDate" type="date" class="form-control"/>
                    </div>
                    <span asp-validation-for="Event.StartDate" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6 row-spacing">
                    <label asp-for="Event.StreamingAccessEnds" class="col-form-label"></label>
                    <div class="mb-3 date" id="pickerEnd">

                        <input asp-for="Event.StreamingAccessEnds" type="date" class="form-control"/>
                    </div>
                    <span asp-validation-for="Event.StreamingAccessEnds"
                          class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="row my-4">
        <div class="col-12">
            <label asp-for="Event.Description" class="col-form-label"></label>
            <textarea asp-for="Event.Description" class="form-control" rows="5"> </textarea>
            <span asp-validation-for="Event.Description" class="text-danger"></span>
        </div>
    </div>

    <div class="row my-4">
        <div class="col-12">
            <label asp-for="Event.IsStreamingEmbed" class="col-form-label"></label>
            <select asp-for="Event.IsStreamingEmbed" class="form-control">
                <option value="true">Streaming link data is an embed</option>
                <option value="false">Streaming link data is an external link</option>
            </select>
        </div>
    </div>

    <div class="row my-4">
        <div class="col-12">
            <label asp-for="Event.StreamingLinkData" class="col-form-label"></label>
            <small>
                <em>
                    Make a responsive embed that looks good on all devices by following the
                    <a href="https://getbootstrap.com/docs/3.4/components/#responsive-embed"
                       target="_blank">Boostrap responsive embed guidance</a>.
                </em>
            </small>
            <textarea asp-for="Event.StreamingLinkData" required class="form-control"></textarea>
            <span asp-validation-for="Event.StreamingLinkData" class="text-danger"></span>
        </div>
    </div>

    <div class="row my-4">
        <div class="col-12">
            <label asp-for="Event.ProgramId" class="col-form-label"></label>
            <select asp-for="Event.ProgramId" asp-items="Model.ProgramList" class="form-control">
                <option value="">All Programs</option>
            </select>
            <span asp-validation-for="Event.ProgramId" class="text-danger"></span>
        </div>
    </div>

    @if (Model.Editing && (Model.CanRelateChallenge || Model.Event.Challenge != null || Model.Event.ChallengeGroup != null))
    {
        <div class="row my-4">
            <div class="col-12">
                <label class="col-form-label">Related Challenge/Group</label>
                <table id="challengeTable" class="table table-sm table-bordered table-striped @(Model.Event.Challenge == null ? "d-none" : "")">
                    <thead>
                        <tr>
                            <th>Challenge Name</th>
                            <th>Badge</th>
                            <th width="44px">Active</th>
                            @if (Model.CanRelateChallenge)
                            {
                                <th width="44px">&nbsp;</th>
                            }
                        </tr>
                    </thead>
                    <tbody id="challengeList">
                        @if (Model.Event.Challenge != null)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Edit"
                                    asp-controller="@ChallengesController.Name" 
                                    asp-route-id="@Model.Event.Challenge.Id" target="_blank">@Model.Event.Challenge.Name</a>
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(Model.Event.Challenge.BadgeFilename))
                                    {
                                        <img class="img-thumbnail" style="height: auto; width: 64px;"
                                             src="~/@Model.Event.Challenge.BadgeFilename?@DateTime.Now.ToString("yyMMddHHmmss")"
                                             asp-append-version="true" />
                                    }
                                    else
                                    {
                                        <text>&nbsp;</text>
                                    }
                                </td>
                                <td class="gra-mc-icon">
                                    @if (Model.Event.Challenge.IsActive)
                                    {
                                        <span class="far fa-check-circle fa-lg text-success"></span>
                                    }
                                    else
                                    {
                                        <span class="fas fa-lg fa-ban text-danger"></span>
                                    }
                                </td>
                                @if (Model.CanRelateChallenge)
                                {
                                    <td class="gra-mc-icon">
                                        <button type="button" class="btn btn-link btn-sm removeRelatedButton">
                                            <span class="fas fa-2x fa-minus-circle text-danger" aria-hidden="true"></span>
                                        </button>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
                <table id="groupTable" class="table table-sm table-bordered table-striped @(Model.Event.ChallengeGroup == null ? "d-none" : "")">
                    <thead>
                        <tr>
                            <th>Group Name</th>
                            <th>Description</th>
                            <th>Link</th>
                            @if (Model.CanRelateChallenge)
                            {
                                <th width="44px">&nbsp;</th>
                            }
                        </tr>
                    </thead>
                    <tbody id="groupList">
                        @if (Model.Event.ChallengeGroup != null)
                        {
                            <tr>
                                <td>
                                    @if (Model.CanEditGroups)
                                    {
                                        <a asp-controller="Challenges" asp-action="EditGroup" asp-route-id="@Model.Event.ChallengeGroup.Id" target="_blank">@Model.Event.ChallengeGroup.Name</a>
                                    }
                                    else
                                    {
                                        @Model.Event.ChallengeGroup.Name
                                    }
                                </td>
                                <td>
                                    @Model.Event.ChallengeGroup.Description
                                </td>
                                <td>
                                    <a asp-area="" asp-controller="Challenges" asp-action="List" asp-route-id="@Model.Event.ChallengeGroup.Stub" target="_blank">@Model.Event.ChallengeGroup.Stub</a>
                                </td>
                                @if (Model.CanRelateChallenge)
                                {
                                    <td class="gra-mc-icon">
                                        <button type="button"
                                                class="btn btn-link btn-sm removeRelatedButton"
                                                data-id="@Model.Event.ChallengeGroup.Id">
                                            <span class="fas fa-2x fa-minus-circle text-danger" aria-hidden="true"></span>
                                        </button>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
                <div id="noRelated" class="alert alert-warning @(Model.Event.Challenge != null || Model.Event.ChallengeGroup != null ? "d-none" : "")" style="margin-bottom: 0.5rem;">No related challenges or challenge groups.</div>
                @if (Model.CanRelateChallenge)
                {
                    <input asp-for="CanRelateChallenge" type="hidden" />
                    <input asp-for="Event.ChallengeId" type="hidden" />
                    <input asp-for="Event.ChallengeGroupId" type="hidden" />
                    <button type="button" id="addButton" class="btn btn-secondary" style="display: block"><span class="relatedText">@(Model.Event.Challenge != null || Model.Event.ChallengeGroup != null ? "Change" : "Add")</span> Related Challenge</button>
                }
            </div>
        </div>
    }
    else if (Model.CanRelateChallenge && !Model.Editing)
    {
        <input asp-for="CanRelateChallenge" type="hidden" />
        <input asp-for="Event.ChallengeId" type="hidden" />
        <input asp-for="Event.ChallengeGroupId" type="hidden" />
        <div class="row my-4">
            <div class="col-12">
                <label class="col-form-label">Related Challenge/Group</label>
                <table id="challengeTable" class="table table-sm table-bordered table-striped d-none">
                    <thead>
                        <tr>
                            <th>Challenge Name</th>
                            <th>Badge</th>
                            <th width="44px">Active</th>
                            <th width="44px">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody id="challengeList"></tbody>
                </table>
                <table id="groupTable" class="table table-sm table-bordered table-striped d-none">
                    <thead>
                        <tr>
                            <th>Group Name</th>
                            <th>Description</th>
                            <th>Link</th>
                            <th width="44px">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody id="groupList"></tbody>
                </table>
                <div id="noRelated" class="alert alert-warning" style="margin-bottom: 0.5rem;">No related challenges or challenge groups.</div>
                <button type="button" id="addButton" class="btn btn-secondary" style="display: block"><span class="relatedText">@(Model.Event?.Challenge != null || Model.Event?.ChallengeGroup != null ? "Change" : "Add")</span> Related Challenge</button>
            </div>
        </div>
    }

    @if (Model.CanAddSecretCode && !Model.Editing)
    {
        <input asp-for="CanAddSecretCode" type="hidden" />
        <input asp-for="IncludeSecretCode" type="hidden" />
        <input asp-for="UseBadgeMaker" type="hidden" />
        <input asp-for="BadgeMakerUrl" type="hidden" />
        <input asp-for="BadgeMakerImage" type="hidden" />

        <div class="list-group" id="accordionSecretCode" role="tablist" aria-multiselectable="true">
            <div class="card">
                <div class="card-header @(Model.RequireSecretCode ? "bg-warning-subtle" : "bg-info-subtle")" role="tab" id="headingSecretCode">
                    <h4 class="card-title">
                        @if (Model.RequireSecretCode)
                        {
                            <text>Add Secret Code to this event (required)</text>
                        }
                        else
                        {
                            <a role="button" data-bs-toggle="collapse" data-bs-parent="#accordionSecretCode" href="#collapseSecretCode" aria-expanded="true" aria-controls="collapseSecretCode">
                                <span id="secretCodeIcon" class="fas fa-lg @(Model.IncludeSecretCode ? "fa-caret-down" : "fa-caret-right")"></span>
                                Add Secret Code to this event
                            </a>
                        }
                    </h4>
                </div>
                <div id="collapseSecretCode" class="collapse" role="tabpanel" aria-labelledby="headingSecretCode">
                    <div class="card-body">
                        <div class="row my-4">
                            <div class="col-12">
                                <label asp-for="SecretCode" class="col-form-label"></label>
                                <span id="SecretCode-Icon" class="fa colored-icon d-none"></span>
                                <input asp-for="SecretCode" class="form-control secretCodeField @(Model.IncludeSecretCode ? "" : "ignore")" />
                                <span id="SecretCode-Validation" asp-validation-for="SecretCode" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row my-4">
                            <div class="col-12">
                                <label asp-for="AwardMessage" class="col-form-label"></label>
                                <textarea asp-for="AwardMessage" class="form-control secretCodeField @(Model.IncludeSecretCode ? "" : "ignore")"></textarea>
                                <span asp-validation-for="AwardMessage" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row my-4">
                            <div class="col-12">
                                <label asp-for="AwardPoints" class="col-form-label"></label>
                                <input asp-for="AwardPoints" min="0" class="form-control secretCodeField @(Model.IncludeSecretCode ? "" : "ignore")" />
                                <span asp-validation-for="AwardPoints" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row my-4">
                            <div class="col-12">
                                <label class="col-form-label">Award Badge</label>
                            </div>

                            <div class="col-12 col-sm-4 col-md-3">
                                <img id="badgeImage" class="img-thumbnail badge-lg" src="@Model.BadgeMakerImage" style="height:210px;" />
                                <span asp-validation-for="BadgeMakerImage" class="text-danger" style="display:block;"></span>
                            </div>

                            <div class="col-12 col-sm-8 col-md-9">
                                <ul class="nav nav-tabs" role="tablist">
                                    @if (Model.UseBadgeMaker)
                                    {
                                    <li role="presentation" class=@(Model.UseBadgeMaker ? "active" : "")>
                                        <a id="badgeTab" href="#badge" aria-controls="badge" role="tab" data-bs-toggle="tab">Badge Maker</a>
                                    </li>
                                    }
                                    <li role="presentation" class=@(Model.UseBadgeMaker ? "" : "active")>
                                        <a id="uploadTab" href="#upload" aria-controls="upload" role="tab" data-bs-toggle="tab">Upload an Image</a>
                                    </li>
                                </ul>

                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane @(Model.UseBadgeMaker ? "active" : "")" id="badge">
                                        <button id="openMaker" type="button" class="btn btn-secondary">
                                            <span class="fas fa-certificate"></span> Create a Badge
                                        </button>
                                    </div>
                                    <div role="tabpanel" class="tab-pane @(Model.UseBadgeMaker ? "" : "active")" id="upload">
                                        <p>Upload a badge image. Badge images must be square.</p>
                                        <div class="input-group">
                                            <label class="input-group-text">
                                                <span class="btn btn-secondary btn-file">
                                                    <span class="far fa-file-image"></span> Select an image<input type="file" asp-for="BadgeUploadImage" accept=".png,.jpg,.jpeg" style="display: none;" />
                                                </span>
                                            </label>
                                            <input type="text" class="form-control" readonly id="selectedFile">
                                        </div>
                                        <div>
                                            <span asp-validation-for="BadgeUploadImage" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row my-4">
                            <div class="col-12">
                                <label asp-for="BadgeAltText" class="col-form-label"></label>
                                <span class="fas fa-info-circle wide-tooltip"
                                      title="How should this badge be described to someone who can't see it?"
                                      data-bs-toggle="tooltip"
                                      data-bs-placement="top"></span>
                                <textarea asp-for="BadgeAltText" class="form-control"></textarea>
                                <span asp-validation-for="BadgeAltText" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="mb-3 my-4">
        <a asp-action="StreamingEvents" class="btn btn-secondary">Return to List</a>
        <button type="submit" class="btn btn-primary" button-spinner>
            <span class="buttonText">
                @if (Model.Editing)
                {
                    @:Save Changes
                }
                else
                {
                    @:Create Streaming Event
                }
            </span>
        </button>
    </div>
</form>

