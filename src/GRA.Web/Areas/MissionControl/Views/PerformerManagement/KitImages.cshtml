@model GRA.Controllers.ViewModel.MissionControl.PerformerManagement.KitImagesViewModel

@{
    var invalid = Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid;
}

@section styles {
    <link rel="stylesheet" href="/css/performerregistration.min.css" />
}

<div class="row">
    <div class="col-12 my-4 d-flex justify-content-center">
        <h1>
            Images for Kit: @Model.KitName
        </h1>
    </div>
    <form asp-action="KitImages" class="form-horizontal col-12" method="post" role="form" enctype="multipart/form-data">
        <input asp-for="KitId" type="hidden" />
        <div class="row">
            <div class="text-center">
                <p>
                    Additional images can be added here. For best results please
                    use images that are at least 1,000px by 1,000px, uploads are limited to @(Model.MaxUploadMB)MB total.
                    Multiple images can be selected by holding the CTRL key.
                </p>
            </div>
        </div>

        <div class="mb-3">
            <div class="d-flex justify-content-center">
                <h2 class="mb-4">Upload photos</h2>
            </div>
            <div class="d-flex justify-content-center">
            <div class="col-sm-9">
                <div class="input-group">
                    <label class="input-group-text">
                        <span class="btn btn-outline-primary btn-file">
                            <span class="far fa-file-image"></span> Select file(s)...
                            <input type="file"
                                   multiple="multiple"
                                   asp-for="Images"
                                   accept=".png,.jpg,.jpeg"
                                   style="display: none;" />
                        </span>
                    </label>
                    <input type="text" class="form-control @(ViewData.ModelState.GetValidationState("Images") == invalid ? "input-validation-error" : "")" readonly />
                </div>
                <span asp-validation-for="Images" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="text-center my-3">
                <button type="submit"
                        class="btn btn-lg btn-outline-success btn-spinner mb-3 me-3"
                        button-spinner>
                    Upload Image(s)
                </button>
                <button id="deleteButton" type="button" class="btn btn-lg btn-outline-danger mb-3 me-3" data-bs-toggle="modal" data-bs-target="#deleteModal" disabled>
                    Delete Selected Image(s)
                </button>
            </div>
        </div>
    </form>
    <div class="col-12">
        @if (Model.KitImages.Count == 0)
        {
            <div class="alert alert-warning">No Images.</div>
        }
        else
        {
            for (int i = 0; i < Model.KitImages.Count; i++)
            {
                if (i % 3 == 0)
                {
                    @Html.Raw("<div class=\"row d-flex justify-content-center\">");
                }
                <div class="col-12 col-md-4 mb-6">
                    <div class="border border-dark">
                        <div class="d-flex justify-content-center">
                        <img src="~/@Model.KitImages[i].Filename" class="img-fluid my-3" />
                        </div>
                        <div class="d-flex justify-content-center mb-3">
                        <input class="deleteSelection form-check w-25" type="checkbox" data-id="@Model.KitImages[i].Id" />
                        </div>
                    </div>
                </div>
                if (i % 3 == 2)
                {
                    @Html.Raw("</div>");
                }
            }
            if (Model.KitImages.Count % 3 != 0)
            {
                @Html.Raw("</div>");
            }
        }
    </div>
</div>

<div class="d-flex justify-content-center">
    <a asp-action="Kit" asp-route-id="@Model.KitId" class="btn btn-lg btn-outline-secondary my-4">Return to Kit</a>
</div>

<div class="row">
    <div class="modal fade"
         id="deleteModal"
         tabindex="-1"
         role="dialog"
         aria-labelledby="deleteModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title h4" id="deleteModalLabel">Delete images</h1>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close dialog">
                        
                    </button>
                </div>
                <div class="modal-body">
                    <span class="fas fa-exclamation-triangle fa-lg text-danger pt-2 me-3" aria-hidden="true"></span>
                    <span id="modal-text">
                        Are you sure you want to delete the selected image(s)?
                    </span>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-outline-secondary"
                            data-bs-dismiss="modal"
                            style="margin-right: 1em;">
                        Cancel
                    </button>
                    <form asp-action="KitImagesDelete"
                          method="post"
                          role="form"
                          style="display:inline">
                        <input asp-for="KitId" type="hidden" />
                        <input asp-for="ImagesToDelete" type="hidden" />
                        <button type="submit"
                                class="btn btn-outline-danger btn-spinner float-end"
                                aria-label="Confirm"
                                button-spinner>
                            <span class="fas fa-times fa-fw" aria-hidden="true"></span>
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="/js/performerregistration.min.js"></script>

    <script>
        $(".deleteSelection").on("change", function () {
            if ($(".deleteSelection:checked").length > 0) {
                $("#deleteButton").removeAttr("disabled");
            }
            else {
                $("#deleteButton").attr("disabled", "disabled");
            }
        });

        $('#deleteModal').on('show.bs.modal', function (event) {
            var imageSelection = JSON.stringify($(".deleteSelection:checked").map(function () { return $(this).data("id") }).get());
            $(this).find('#ImagesToDelete').val(imageSelection);
        })
    </script>
}