                MaximumValue="999"
                Display="Dynamic"
                Type="Integer"
                EnableClientScript="true"
                ErrorMessage="<font color='red'>Width must be from 0 to 999!</font>"
                runat="server" 
                Font-Bold="True" Font-Italic="True" 
                Text="<font color='red'> * Width must be from 0 to 999! </font>" 
                EnableTheming="True" 
                SetFocusOnError="True" />
        
        
