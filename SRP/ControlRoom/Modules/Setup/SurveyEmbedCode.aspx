            <asp:RegularExpressionValidator id="revIWidth"
                ControlToValidate="IWidth"
                ValidationExpression="\d+"
                Display="Dynamic"
                EnableClientScript="true"
                ErrorMessage="<font color='red'>Width must be numeric.</font>"
                runat="server"
                Font-Bold="True" Font-Italic="True" 
                Text="<font color='red'> * Width must be numeric. </font>" 
                EnableTheming="True" 
                SetFocusOnError="True" />      
